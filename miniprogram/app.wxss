page {
  --trae-primary: #1e3a8a;
  --trae-primary-dark: #1e40af;
  --trae-primary-light: #3b82f6;
  --trae-secondary: #0ea5e9;
  --trae-secondary-dark: #0284c7;
  --trae-secondary-light: #38bdf8;
  --trae-accent: #f59e0b;
  --trae-accent-dark: #d97706;
  --trae-accent-light: #fbbf24;
  --trae-highlight: #fbbf24;
  --primary-gradient: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  --secondary-gradient: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  --accent-gradient: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  --success-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
  --warning-gradient: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  --danger-gradient: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  --card-gradient: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  --card-elevated: linear-gradient(135deg, rgba(255,255,255,1) 0%, rgba(241,245,249,0.98) 100%);
  --bg-primary: #ffffff;
  --bg-secondary: #f8fafc;
  --bg-tertiary: #f1f5f9;
  --bg-elevated: #ffffff;
  --bg-glass: rgba(255, 255, 255, 0.85);
  --bg-glass-border: rgba(255, 255, 255, 0.9);
  --bg-decoration-primary: rgba(30, 58, 138, 0.05);
  --bg-decoration-secondary: rgba(14, 165, 233, 0.05);
  --bg-decoration-accent: rgba(245, 158, 11, 0.08);
  --text-primary: #0f172a;
  --text-secondary: #334155;
  --text-tertiary: #64748b;
  --text-light: #94a3b8;
  --text-inverse: #ffffff;
  --border-light: #e2e8f0;
  --border-medium: #cbd5e1;
  --border-heavy: #94a3b8;
  --shadow-xs: 0 1px 2px rgba(15, 23, 42, 0.04);
  --shadow-sm: 0 2px 4px rgba(15, 23, 42, 0.06);
  --shadow-md: 0 4px 8px rgba(15, 23, 42, 0.08);
  --shadow-lg: 0 8px 16px rgba(15, 23, 42, 0.1);
  --shadow-xl: 0 12px 24px rgba(15, 23, 42, 0.12);
  --shadow-2xl: 0 20px 40px rgba(15, 23, 42, 0.15);
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-2xl: 40rpx;
  --radius-full: 9999rpx;
  --transition-fast: 0.15s;
  --transition-normal: 0.25s;
  --transition-slow: 0.4s;
  --space-xs: 8rpx;
  --space-sm: 12rpx;
  --space-md: 16rpx;
  --space-lg: 24rpx;
  --space-xl: 32rpx;
  --space-2xl: 48rpx;
  --space-3xl: 64rpx;
  --success-color: #10b981;
  --danger-color: #ef4444;
}

page {
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: #0f172a;
  min-height: 100vh;
  line-height: 1.6;
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  padding: 24rpx;
  gap: 24rpx;
  position: relative;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  padding: 32rpx;
  margin-bottom: 24rpx;
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
}

.card-elevated {
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
  padding: 48rpx;
  margin-bottom: 32rpx;
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
  position: relative;
}

.card-elevated::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 32rpx 32rpx 0 0;
}

.card-flat {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  padding: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
  letter-spacing: 0.5rpx;
  position: relative;
  padding-left: 32rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

button {
  background: initial;
  border-radius: 16rpx;
  transition: all 0.25s;
  border: none;
  font-weight: 600;
}

button:focus {
  outline: none;
}

button::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  transition: all 0.25s;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
}

.btn-secondary {
  background: #ffffff;
  color: #1e3a8a;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  border: 2rpx solid #1e3a8a;
  border-radius: 16rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  transition: all 0.25s;
}

.btn-secondary:active {
  background: #1e3a8a;
  color: #ffffff;
  transform: scale(0.98);
}

input {
  background: #ffffff;
  border: 2rpx solid #cbd5e1;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #0f172a;
  transition: all 0.25s;
  box-shadow: 0 1px 2px rgba(15, 23, 42, 0.04);
}

input:focus {
  outline: none;
  border-color: #1e3a8a;
  box-shadow: 0 0 0 4rpx rgba(30, 58, 138, 0.1);
}

input::placeholder {
  color: #94a3b8;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.grid-2 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.grid-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.grid-4 {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
}

.grid-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  border-color: #1e3a8a;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
  box-shadow: 0 1px 2px rgba(15, 23, 42, 0.04);
}

.list-item:active {
  background: #f1f5f9;
  transform: translateX(4rpx);
}

.label {
  font-size: 24rpx;
  color: #334155;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.divider {
  height: 1px;
  background: #e2e8f0;
  margin: 24rpx 0;
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 9999rpx;
}

.badge-primary {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.badge-accent {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #ffffff;
}

.badge-success {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #ffffff;
}

.badge-warning {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #ffffff;
}

.badge-danger {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #ffffff;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  transition: all 0.25s;
  border: 1px solid #e2e8f0;
}

.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 24rpx;
  color: #1e3a8a;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  color: #94a3b8;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #1e3a8a;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.tab-bar {
  background: #ffffff;
  border-top: 1px solid #e2e8f0;
  box-shadow: 0 -4px 16px rgba(15, 23, 42, 0.08);
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  transition: all 0.25s;
}

.tab-bar-item.active {
  color: #1e3a8a;
}

.tab-bar-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  transition: all 0.25s;
}

.tab-bar-item.active .tab-bar-icon {
  transform: scale(1.1);
}

.tab-bar-text {
  font-size: 20rpx;
  font-weight: 500;
}

@media (max-width: 375rpx) {
  .container {
    padding: 16rpx;
    gap: 16rpx;
  }
  
  .card {
    padding: 24rpx;
    margin-bottom: 16rpx;
  }
  
  .card-elevated {
    padding: 32rpx;
    margin-bottom: 24rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .grid-item {
    padding: 24rpx 16rpx;
  }
}

