.container {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.1);
  border-bottom: 1rpx solid rgba(30, 58, 138, 0.1);
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: #dbeafe;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.back-btn:hover {
  background: #bfdbfe;
}

.header-info {
  flex: 1;
  margin-left: 24rpx;
}

.header-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.header-status {
  font-size: 24rpx;
  color: #10b981;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: #dbeafe;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.header-right:hover {
  background: #bfdbfe;
}

.message-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.message-item {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.3);
}

.avatar-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.message-bubble {
  max-width: 70%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.1);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.message-text {
  font-size: 32rpx;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.5);
  text-align: right;
  display: block;
}

.message-input-container {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: white;
  box-shadow: 0 -2rpx 8rpx rgba(30, 58, 138, 0.1);
  border-top: 1rpx solid rgba(30, 58, 138, 0.1);
  gap: 12rpx;
}

.message-input {
  flex: 1;
  background: #dbeafe;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  font-size: 32rpx;
  min-height: 48rpx;
  max-height: 150rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.2);
  transition: all 0.3s ease;
}

.message-input:focus {
  border-color: #1e3a8a;
  box-shadow: 0 0 0 2rpx rgba(30, 58, 138, 0.1);
}

.send-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.3);
  transition: all 0.3s ease;
}

.send-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.4);
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.3);
}

.send-icon {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  transform: rotate(45deg);
}

.message-content::-webkit-scrollbar {
  width: 4rpx;
}

.message-content::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 2rpx;
}

.message-content::-webkit-scrollbar-thumb {
  background: #1e3a8a;
  border-radius: 2rpx;
}

.message-content::-webkit-scrollbar-thumb:hover {
  background: #1e40af;
}