/* 消息页面样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  min-height: 100vh;
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 32rpx;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1677ff;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 消息列表 */
.message-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.conversation-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  cursor: pointer;
}

.conversation-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.conversation-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.conversation-info {
  flex: 1;
  position: relative;
}

.conversation-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.conversation-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.conversation-time {
  font-size: 24rpx;
  color: #999999;
}

.conversation-preview {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.unread-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: #ef4444;
  border-radius: 12rpx;
  padding: 4rpx 12rpx;
  min-width: 36rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.unread-count {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 24rpx;
  padding: 80rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.empty-subtitle {
  font-size: 32rpx;
  color: #999999;
  text-align: center;
}