/* 发布任务页面样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  min-height: 100vh;
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 32rpx;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1677ff;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 表单容器 */
.form-container {
  margin-bottom: 40rpx;
}

.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-section:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

/* 服务类型选择 */
.service-type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.service-type-item {
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.service-type-item.active {
  background: #e0f2fe;
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.service-type-icon {
  font-size: 48rpx;
}

.service-type-text {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333333;
  transition: all 0.3s ease;
}

.form-input:focus {
  outline: none;
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.form-input::placeholder {
  color: #999999;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #333333;
  resize: none;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  outline: none;
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.form-textarea::placeholder {
  color: #999999;
}

/* 预算选项 */
.budget-options {
  display: flex;
  gap: 20rpx;
}

.budget-item {
  flex: 1;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.budget-item.active {
  background: #e0f2fe;
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.budget-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

/* 日期选择器 */
.date-picker {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.date-picker:hover {
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.picker-content {
  font-size: 32rpx;
  color: #333333;
}

/* 附件上传 */
.upload-section {
  margin-top: 16rpx;
}

.upload-area {
  background: #f8f9fa;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.upload-area:hover {
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.upload-icon {
  font-size: 48rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.upload-hint {
  font-size: 24rpx;
  color: #999999;
}

.file-list {
  margin-top: 24rpx;
}

.file-item {
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.file-item:hover {
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-bottom: 4rpx;
}

.file-size {
  font-size: 24rpx;
  color: #999999;
}

.file-action {
  color: #1677ff;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
}

/* 提交按钮 */
.submit-section {
  margin-bottom: 40rpx;
  padding: 0 24rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 24rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.3);
}

.submit-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.4);
}

.submit-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.submit-btn[disabled] {
  background: #c9c9c9;
  box-shadow: none;
  cursor: not-allowed;
}

/* 提示信息 */
.tips-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}