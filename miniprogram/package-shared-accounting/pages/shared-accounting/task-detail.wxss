/* 任务详情页面样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  min-height: 100vh;
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 32rpx;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1677ff;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 任务状态卡片 */
.status-card {
  background: #3b82f6;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
  display: block;
}

.status-desc {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 任务信息卡片 */
.task-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.task-header {
  margin-bottom: 32rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

.task-meta {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 28rpx;
  color: #333333;
}

/* 任务描述 */
.task-description {
  margin-bottom: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.description-text {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
}

/* 任务信息 */
.task-info {
  margin-bottom: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  width: 200rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 32rpx;
  color: #666666;
  flex: 1;
}

/* 附件信息 */
.task-attachments {
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
}

.file-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.file-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
}

.file-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 4rpx;
  display: block;
}

.file-size {
  font-size: 24rpx;
  color: #999999;
}

.file-action {
  margin-left: 16rpx;
}

.download-text {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: bold;
}

/* 任务进展 */
.progress-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 120rpx;
}

.progress-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress-item {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border-left: 4rpx solid #3b82f6;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.progress-date {
  font-size: 24rpx;
  color: #999999;
}

.progress-content {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 评价表单 */
.review-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.review-form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rating-section {
  display: flex;
  align-items: center;
}

.rating-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 24rpx;
}

.rating-stars {
  display: flex;
  gap: 16rpx;
}

.star {
  font-size: 40rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #e0e0e0;
}

.star.active {
  color: #1e3a8a;
  transform: scale(1.1);
}

.review-content-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.content-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.review-content {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  min-height: 200rpx;
  resize: none;
}

.submit-review-btn {
  width: 100%;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.submit-review-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.4);
}

.submit-review-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid rgba(22, 119, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1677ff;
}

.close-btn {
  font-size: 40rpx;
  font-weight: bold;
  color: #666666;
  cursor: pointer;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:hover {
  background: #f8f9fa;
  color: #333333;
}

.modal-body {
  padding: 32rpx;
}

.progress-title-input {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.progress-content-input {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  min-height: 200rpx;
  resize: none;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
}

.footer-btn {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.footer-btn.cancel {
  background: white;
  color: #666666;
}

.footer-btn.confirm {
  background: #1677ff;
  color: white;
  border-color: #1677ff;
}

.footer-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}