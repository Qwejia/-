.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.ai-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  padding: 0;
}

.ai-btn:active {
  transform: scale(0.95);
}

.ai-icon {
  font-size: 28rpx;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.hero-section {
  margin-bottom: 8rpx;
}

.hero-card {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 32rpx;
  padding: 64rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  position: relative;
  overflow: hidden;
}

.hero-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.hero-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.hero-btn {
  background: #ffffff;
  color: #1e3a8a;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  position: relative;
  z-index: 1;
}

.hero-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 700;
}

.services-section {
  margin-bottom: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.view-all-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.view-all-text {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.view-all-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.service-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.service-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.service-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-card.tax .service-icon-wrapper {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.service-card.accounting .service-icon-wrapper {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.service-card.audit .service-icon-wrapper {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.service-card.consulting .service-icon-wrapper {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.service-icon {
  font-size: 40rpx;
}

.service-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
}

.accountants-section {
  margin-bottom: 8rpx;
}

.accountants-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.accountant-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.accountant-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.accountant-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.accountant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.accountant-basic {
  flex: 1;
}

.accountant-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
  display: block;
  margin-bottom: 8rpx;
}

.accountant-rating {
  display: inline-block;
}

.rating-stars {
  font-size: 20rpx;
  color: #fbbf24;
}

.accountant-price {
  text-align: right;
}

.price-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e3a8a;
  display: block;
}

.price-unit {
  font-size: 20rpx;
  color: #64748b;
}

.accountant-body {
  margin-bottom: 16rpx;
}

.accountant-specialty {
  font-size: 22rpx;
  color: #334155;
  display: block;
  margin-bottom: 12rpx;
}

.accountant-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.stat-value {
  font-size: 22rpx;
  font-weight: 600;
  color: #0f172a;
}

.stat-label {
  font-size: 20rpx;
  color: #64748b;
}

.stat-divider {
  color: #e2e8f0;
}

.accountant-footer {
  border-top: 1px solid #e2e8f0;
  padding-top: 16rpx;
}

.book-btn {
  width: 100%;
  padding: 16rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
}

.tasks-section {
  margin-bottom: 8rpx;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.task-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.task-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.task-status.pending {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}

.task-status.in-progress {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
  color: #1e40af;
}

.task-status.completed {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  color: #059669;
}

.task-description {
  font-size: 22rpx;
  color: #64748b;
  display: block;
  margin-bottom: 16rpx;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 20rpx;
  color: #64748b;
}

.task-price .price-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #1e3a8a;
}

.task-date {
  font-size: 20rpx;
  color: #64748b;
}

.empty-state {
  padding: 64rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.process-section {
  margin-bottom: 8rpx;
}

.process-steps {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.process-step {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 160rpx;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.step-content {
  text-align: center;
}

.step-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #0f172a;
  display: block;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 20rpx;
  color: #64748b;
  display: block;
}

.step-connector {
  flex-shrink: 0;
  width: 40rpx;
  height: 2rpx;
  background: #e2e8f0;
  margin-top: 28rpx;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .services-grid {
    grid-template-columns: 1fr;
  }
  
  .accountant-header {
    flex-direction: column;
    text-align: center;
  }
  
  .accountant-price {
    text-align: center;
  }
}