/* 会计详情页面样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  min-height: 100vh;
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 32rpx;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1677ff;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 会计信息卡片 */
.accountant-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 32rpx;
}

.accountant-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.accountant-avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.3);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.accountant-info {
  flex: 1;
  margin-right: 24rpx;
}

.accountant-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.accountant-title {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

.accountant-rating {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.rating-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.review-count {
  font-size: 28rpx;
  color: #999999;
}

.contact-btn {
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
}

.contact-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.4);
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 服务信息 */
.service-info {
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
  padding-top: 24rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  width: 200rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 32rpx;
  color: #666666;
  flex: 1;
}

.service-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #e0f2fe;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #1677ff;
}

.tag-text {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: bold;
}

/* 个人简介 */
.bio-section {
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
  padding-top: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.bio-text {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
}

/* 评价列表 */
.reviews-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 120rpx;
}

.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.review-item {
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 24rpx;
}

.review-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.reviewer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.review-rating {
  font-size: 28rpx;
  color: #1e3a8a;
  font-weight: bold;
}

.review-date {
  font-size: 24rpx;
  color: #999999;
  margin-left: auto;
}

.review-content {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.review-service {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.service-label {
  font-size: 28rpx;
  color: #999999;
}

.service-name {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: bold;
}

.empty-reviews {
  text-align: center;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.hire-btn {
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  border: none;
  border-radius: 24rpx;
  padding: 32rpx 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.3);
  transition: all 0.3s ease;
}

.hire-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.4);
}

.hire-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}