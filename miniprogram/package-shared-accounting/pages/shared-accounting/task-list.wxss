/* 任务列表页面样式 */
.container {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  min-height: 100vh;
  padding: 0 24rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0 32rpx;
}

.back-btn {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1677ff;
}

.header-right {
  width: 56rpx;
  height: 56rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 32rpx;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter-tab.active {
  background: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.tab-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  transition: all 0.3s ease;
}

.filter-tab.active .tab-text {
  color: white;
}

/* 搜索和排序区域 */
.search-sort-section {
  margin-bottom: 32rpx;
}

.search-box {
  background: white;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999999;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  padding: 8rpx 0;
}

.clear-btn {
  font-size: 32rpx;
  color: #999999;
  cursor: pointer;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.clear-btn:hover {
  background: #f8f9fa;
  color: #333333;
}

.sort-section {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sort-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 24rpx;
}

.sort-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.sort-option {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.sort-option.active {
  background: #1677ff;
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.sort-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  transition: all 0.3s ease;
}

.sort-option.active .sort-text {
  color: white;
}

/* 任务列表容器 */
.task-list-container {
  margin-bottom: 40rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 任务卡片 */
.task-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.task-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
}

.task-status {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.task-description {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.task-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 28rpx;
  color: #333333;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(22, 119, 255, 0.1);
}

.task-time {
  font-size: 24rpx;
  color: #999999;
}

.task-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-btn.view {
  background: #f8f9fa;
  color: #1677ff;
  border: 2rpx solid #1677ff;
}

.action-btn.view:hover {
  background: #e0f2fe;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.action-btn.cancel {
  background: #fef2f2;
  color: #ef4444;
  border: 2rpx solid #ef4444;
}

.action-btn.cancel:hover {
  background: #fee2e2;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.action-btn.complete {
  background: #dcfce7;
  color: #16a34a;
  border: 2rpx solid #16a34a;
}

.action-btn.complete:hover {
  background: #bbf7d0;
  box-shadow: 0 4rpx 12rpx rgba(22, 163, 74, 0.3);
}

.action-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 24rpx;
  padding: 80rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.empty-subtitle {
  font-size: 32rpx;
  color: #999999;
  text-align: center;
}

/* 发布任务按钮 */
.post-task-section {
  margin-bottom: 40rpx;
  padding: 0 24rpx;
}

.post-task-btn {
  width: 100%;
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx 0;
  border-radius: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.3);
}

.post-task-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.4);
}

.post-task-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.3);
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
}