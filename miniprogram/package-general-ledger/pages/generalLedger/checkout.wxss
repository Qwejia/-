/* pages/generalLedger/checkout.wxss */
.container {
  padding: 20rpx;
  background-color: transparent;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.checkout-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.records-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.selector-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.selector-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  padding: 15rpx 20rpx;
  border-radius: 6rpx;
  flex: 1;
  text-align: center;
}

.checkout-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #1a73e8;
  color: #fff;
  border: none;
  border-radius: 6rpx;
}

.checkout-btn::after {
  border: none;
}

.message-box {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.message-box.success {
  background-color: #e8f5e9;
  color: #2e7d32;
  border: 1rpx solid #c8e6c9;
}

.message-box.error {
  background-color: #ffebee;
  color: #c62828;
  border: 1rpx solid #ffcdd2;
}

.message-text {
  font-size: 28rpx;
}

.close-icon {
  margin-left: 20rpx;
}

.records-list {
  margin-top: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.period {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 24rpx;
  color: #fff;
  background-color: #4caf50;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.checkout-date, .voucher-id {
  font-size: 26rpx;
  color: #666;
}