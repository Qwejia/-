/* pages/generalLedger/voucherEntry.wxss */
.container {
  background-color: #f5f5f5;
  padding: 20rpx;
  min-height: 100vh;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-item {
  flex: 1;
  margin-right: 20rpx;
}

.form-item:last-child {
  margin-right: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 凭证分录区域 */
.entries-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.entries-header {
  display: flex;
  background-color: #f0f4ff;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.header-item {
  flex: 1;
  text-align: center;
}

.header-item:first-child {
  flex: 1.2;
  text-align: left;
}

.header-item:nth-child(2) {
  flex: 1.5;
  text-align: left;
}

.header-item:nth-child(3),
.header-item:nth-child(4) {
  flex: 1;
}

.header-item:last-child {
  flex: 0.5;
}

.entries-list {
  margin-bottom: 20rpx;
}

.entry-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fafafa;
  padding: 15rpx;
  border-radius: 8rpx;
}

.entry-item {
  flex: 1;
}

.entry-item:first-child {
  flex: 1.2;
}

.entry-item:nth-child(2) {
  flex: 1.5;
}

.entry-item:nth-child(3),
.entry-item:nth-child(4) {
  flex: 1;
}

.entry-item:last-child {
  flex: 0.5;
}

.account-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.account-text {
  font-size: 28rpx;
  color: #666;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

.input.amount {
  text-align: right;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  font-size: 24rpx;
}

.add-entry-btn {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

/* 合计区域 */
.total-section {
  border-top: 2rpx solid #e5e5e5;
  padding-top: 20rpx;
}

.total-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}

.total-label {
  margin-right: 40rpx;
}

.total-amount {
  margin-right: 40rpx;
}

.balanced {
  color: #52c41a;
  margin-right: 20rpx;
}

.unbalanced {
  color: #ff4d4f;
  margin-right: 20rpx;
}

/* 底部按钮 */
.footer-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
}

.btn {
  flex: 1;
  margin: 0 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}

/* 会计科目选择器 */
.account-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
}

.account-picker {
  width: 100%;
  height: 70vh;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 24rpx;
  padding: 0 20rpx;
}

.account-list {
  height: calc(70vh - 100rpx);
  overflow-y: auto;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.account-code {
  font-size: 28rpx;
  color: #667eea;
  margin-right: 20rpx;
}

.account-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.account-type {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

/* 表单头部样式 */
.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.form-actions {
  display: flex;
  gap: 16rpx;
}

.ai-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%);
  color: #7c3aed;
  border: 1rpx solid #d8b4fe;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.ai-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(124, 58, 237, 0.3);
}

.ai-icon {
  font-size: 32rpx;
}

.ai-text {
  font-weight: 500;
}

/* AI辅助记账模态框样式 */
.ai-assistant-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-header .close-btn {
  font-size: 36rpx;
  color: #666666;
  cursor: pointer;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s ease;
  border: none;
  background: none;
}

.modal-header .close-btn:hover {
  background-color: #f3f4f6;
}

.modal-body {
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.ai-input-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.ai-textarea {
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.5;
  color: #333333;
  resize: vertical;
  transition: border-color 0.3s ease;
}

.ai-textarea:focus {
  outline: none;
  border-color: #7c3aed;
  box-shadow: 0 0 0 3rpx rgba(124, 58, 237, 0.1);
}

.ai-analyze-btn {
  height: 96rpx;
  background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-analyze-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, #6d28d9 0%, #5b21b6 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(124, 58, 237, 0.4);
}

.ai-analyze-btn:disabled {
  background: #e5e7eb;
  color: #9ca3af;
  cursor: not-allowed;
}

.ai-result-section {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-entry {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 16rpx;
  border-radius: 8rpx;
}

.entry-description {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

.entry-account {
  font-size: 22rpx;
  color: #666666;
}

.entry-amount {
  font-size: 24rpx;
  font-weight: 500;
  color: #1677ff;
  margin-top: 4rpx;
}

.apply-result-btn {
  height: 88rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0e66d9 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.apply-result-btn:hover {
  background: linear-gradient(135deg, #0e66d9 0%, #0c5cc8 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.4);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}