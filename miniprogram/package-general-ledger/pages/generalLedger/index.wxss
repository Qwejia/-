/* pages/generalLedger/index.wxss */
.container {
  background-color: transparent;
  padding-bottom: 20rpx;
}

.section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.15), 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateZ(0);
}

.section:active {
  transform: translateZ(0) translateY(2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2), 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 32rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1e3a8a;
  letter-spacing: 2rpx;
  background: linear-gradient(90deg, rgba(30, 58, 138, 0.1) 0%, rgba(30, 64, 175, 0.1) 100%);
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  border-radius: 0 20rpx 20rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(30, 58, 138, 0.2);
  transform: translateZ(0);
}

.voucher-types {
  display: flex;
  flex-wrap: wrap;
  gap: 28rpx;
}

.type-item {
  width: calc(25% - 21rpx);
  background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.9) 100%);
  border-radius: 28rpx;
  padding: 40rpx 0;
  text-align: center;
  box-shadow: 0 12rpx 40rpx rgba(30, 58, 138, 0.15), 0 4rpx 16rpx rgba(30, 58, 138, 0.1);
  border: 3rpx solid rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateZ(0) translateY(0);
  position: relative;
  overflow: hidden;
}

.type-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(135deg, rgba(30, 58, 138, 0.1) 0%, rgba(30, 64, 175, 0.1) 50%, transparent 100%);
  transform: rotate(45deg);
  transition: all 0.6s ease;
  opacity: 0;
}

.type-item:active {
  transform: translateZ(0) translateY(4rpx) scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(30, 58, 138, 0.3), 0 2rpx 8rpx rgba(30, 58, 138, 0.2);
}

.type-item:active::before {
  opacity: 1;
  top: 150%;
  left: 150%;
}

.type-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
}

.type-item:active .type-icon {
  transform: scale(1.15) rotate(5deg);
}

.type-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  position: relative;
  z-index: 2;
  letter-spacing: 1rpx;
}

