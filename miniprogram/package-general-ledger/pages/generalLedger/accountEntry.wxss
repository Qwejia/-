.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  text-align: center;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

/* 表单节 */
.form-section {
  margin-bottom: 40rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.section-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.section-icon {
  font-size: 32rpx;
}

/* 表单行 */
.form-row {
  margin-bottom: 30rpx;
}

/* 表单标签 */
.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: bold;
}

/* 输入框容器 */
.input-container {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

/* 输入框 */
.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

/* 选择器 */
.form-picker {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  font-size: 36rpx;
  color: #999;
}

/* 开关容器 */
.switch-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 复选框容器 */
.checkbox-container {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 辅助核算选项 */
.aux-accounting-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.aux-option {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
}

.aux-option-content {
  flex: 1;
}

.aux-option-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 5rpx;
  display: block;
}

.aux-option-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 30rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.save-btn {
  background: #1677ff;
  color: white;
}

.cancel-btn {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #e5e7eb;
}

/* 验证错误样式 */
.input-error {
  border-color: #dc2626;
  background: #fee2e2;
}

.error-message {
  font-size: 24rpx;
  color: #dc2626;
  margin-top: 10rpx;
  display: block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 12rpx;
  }
  
  .page-header, .form-container {
    padding: 20rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .form-label, .form-input, .form-picker, .aux-option-title, .action-btn {
    font-size: 24rpx;
  }
  
  .aux-option-desc {
    font-size: 20rpx;
  }
  
  .action-buttons {
    padding: 0 12rpx 20rpx;
  }
  
  .action-btn {
    height: 80rpx;
  }
}