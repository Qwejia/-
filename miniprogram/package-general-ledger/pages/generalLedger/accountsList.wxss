/* pages/generalLedger/accountsList.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 筛选条件 */
.filter-section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.picker {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker-text {
  color: #333;
}

.reset-btn {
  text-align: right;
}

/* 会计科目列表 */
.accounts-section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 24rpx;
  color: #999;
}

.account-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.account-item:last-child {
  border-bottom: none;
}

.account-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.account-code-name {
  display: flex;
  align-items: center;
}

.account-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
  width: 150rpx;
}

.account-name {
  font-size: 32rpx;
  color: #333;
}

.account-category {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.account-details {
  display: flex;
  justify-content: space-around;
  padding-left: 170rpx;
}

.detail-item {
  text-align: center;
}

.detail-item .label {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.detail-item .value {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 新增按钮 */
.add-button {
  margin-top: 30rpx;
  text-align: center;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .filter-row {
    flex-direction: column;
  }
  
  .filter-item {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .filter-item:last-child {
    margin-bottom: 0;
  }
  
  .account-details {
    padding-left: 0;
    flex-wrap: wrap;
  }
  
  .detail-item {
    width: 50%;
    margin-bottom: 10rpx;
  }
}