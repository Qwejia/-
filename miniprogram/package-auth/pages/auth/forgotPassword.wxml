<!-- 忘记密码页面结构 -->
<view class="forgot-container">
  <view class="forgot-header">
    <text class="forgot-title">忘记密码</text>
    <text class="forgot-subtitle">重置您的账号密码</text>
  </view>

  <view class="forgot-form">
    <view class="form-group">
      <text class="form-label">用户名</text>
      <view class="form-input-wrapper">
        <input 
          type="text" 
          class="form-input" 
          placeholder="请输入用户名" 
          value="{{username}}" 
          bindinput="handleUsernameInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">手机号</text>
      <view class="form-input-wrapper">
        <input 
          type="number" 
          class="form-input" 
          placeholder="请输入注册手机号" 
          value="{{phone}}" 
          bindinput="handlePhoneInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">验证码</text>
      <view class="form-input-wrapper verification-code-wrapper">
        <input 
          type="number" 
          class="form-input verification-code-input" 
          placeholder="请输入验证码" 
          value="{{verificationCode}}" 
          bindinput="handleVerificationCodeInput"
        />
        <button 
          class="verification-code-button" 
          bindtap="sendVerificationCode"
          disabled="{{countdown > 0}}"
        >
          {{countdown > 0 ? countdown + 's后重发' : '发送验证码'}}
        </button>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">新密码</text>
      <view class="form-input-wrapper">
        <input 
          type="password" 
          class="form-input" 
          placeholder="请输入新密码（至少6位）" 
          value="{{newPassword}}" 
          bindinput="handleNewPasswordInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">确认密码</text>
      <view class="form-input-wrapper">
        <input 
          type="password" 
          class="form-input" 
          placeholder="请再次输入新密码" 
          value="{{confirmPassword}}" 
          bindinput="handleConfirmPasswordInput"
        />
      </view>
    </view>

    <view wx:if="{{error}}" class="error-message">
      {{error}}
    </view>

    <view wx:if="{{success}}" class="success-message">
      {{success}}
    </view>

    <button 
      class="reset-button" 
      bindtap="resetPassword" 
      loading="{{loading}}" 
      disabled="{{loading}}"
    >
      重置密码
    </button>

    <view class="login-link-container">
      <text class="login-link-text">想起密码了？</text>
      <navigator url="/pages/auth/login" class="login-link">立即登录</navigator>
    </view>
  </view>

  <view class="forgot-footer">
    <text class="footer-text">© 2026 用友软件股份有限公司</text>
  </view>
</view>