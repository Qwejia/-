/* 登录页面样式 */
.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  padding: 0 30rpx;
  position: relative;
  overflow: hidden;
}

.login-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.login-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

.login-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

.login-form {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10rpx);
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.form-input-wrapper {
  position: relative;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-input-wrapper:focus-within {
  border-color: #1e3a8a;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  box-shadow: 0 0 0 6rpx rgba(30, 58, 138, 0.15), 0 4rpx 12rpx rgba(30, 58, 138, 0.2);
  transform: translateY(-2rpx);
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
  font-weight: 400;
}

.form-input::placeholder {
  color: #999;
  font-weight: 300;
}

.error-message {
  font-size: 22rpx;
  color: #dc3545;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border-radius: 12rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.error-message::before {
  content: '⚠️';
  font-size: 24rpx;
}

.login-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(30, 58, 138, 0.4);
  position: relative;
  overflow: hidden;
}

.login-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.login-button:hover::before {
  left: 100%;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.login-button[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow: none;
  cursor: not-allowed;
}

.login-links {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.login-link {
  font-size: 24rpx;
  color: #1e3a8a;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.login-link:hover {
  color: #1e40af;
  background: rgba(30, 58, 138, 0.1);
}

.login-footer {
  margin-top: auto;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 6rpx;
  font-weight: 300;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-header {
    padding-top: 80rpx;
  }
  
  .login-form {
    padding: 30rpx;
  }
  
  .form-input {
    height: 70rpx;
  }
  
  .login-button {
    height: 70rpx;
  }
}