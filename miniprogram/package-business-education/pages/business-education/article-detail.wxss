/* 文章详情页样式 */
.article-detail {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #1677ff;
  padding: 0 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-btn {
  font-size: 40rpx;
  color: white;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.share-btn {
  font-size: 32rpx;
  color: white;
}

/* 内容区域 */
.content {
  padding-top: 88rpx;
  padding-bottom: 32rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 文章头部 */
.article-header {
  background-color: white;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  line-height: 1.3;
}

.article-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.article-author {
  font-size: 24rpx;
  color: #666666;
}

.article-date {
  font-size: 24rpx;
  color: #94a3b8;
}

.article-stats {
  display: flex;
  gap: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f1f5f9;
}

.article-reads, .article-likes, .article-comments {
  font-size: 20rpx;
  color: #94a3b8;
}

.article-likes {
  cursor: pointer;
}

.article-likes:active {
  color: #ef4444;
}

/* 文章正文 */
.article-content {
  background-color: white;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 文章底部 */
.article-footer {
  background-color: white;
  padding: 32rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #94a3b8;
}