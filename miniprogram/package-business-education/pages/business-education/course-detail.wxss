/* 课程详情页样式 */
.course-detail {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #1677ff;
  padding: 0 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-btn {
  font-size: 40rpx;
  color: white;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.share-btn {
  font-size: 32rpx;
  color: white;
}

/* 内容区域 */
.content {
  padding-top: 88rpx;
  padding-bottom: 32rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-text {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 课程头部 */
.course-header {
  background-color: white;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.course-cover {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
}

.cover-icon {
  font-size: 80rpx;
  margin-right: 24rpx;
}

.course-badges {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  gap: 12rpx;
}

.badge {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.badge.level {
  background-color: #dbeafe;
  color: #1e40af;
}

.badge.free {
  background-color: #dcfce7;
  color: #166534;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.course-description {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.course-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-author {
  font-size: 24rpx;
  color: #333333;
}

.course-stats {
  display: flex;
  gap: 24rpx;
}

.course-rating, .course-students, .course-duration {
  font-size: 20rpx;
  color: #94a3b8;
}

/* 操作按钮 */
.action-section {
  padding: 32rpx;
  background-color: white;
  margin-bottom: 16rpx;
}

.start-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #1677ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 课程大纲 */
.outline-section {
  padding: 32rpx;
  background-color: white;
  margin-bottom: 16rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.chapters-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.chapter-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.chapter-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.chapter-info {
  flex: 1;
  margin-right: 24rpx;
}

.chapter-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.chapter-description {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
}

.chapter-duration {
  font-size: 20rpx;
  color: #94a3b8;
  white-space: nowrap;
}

/* 学习目标 */
.targets-section {
  padding: 32rpx;
  background-color: white;
  margin-bottom: 16rpx;
}

.targets-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.target-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.target-icon {
  font-size: 24rpx;
  color: #1677ff;
  margin-top: 4rpx;
}

.target-text {
  flex: 1;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 课程要求 */
.requirements-section {
  padding: 32rpx;
  background-color: white;
}

.requirements-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}