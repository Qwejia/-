/* 财商课堂页面样式 */

/* 基础容器 */
.container {
  min-height: 100vh;
  padding: 0 20rpx 120rpx;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 顶部区域 */
.top-section {
  margin-top: 60rpx;
  margin-bottom: 10rpx;
}

.header {
  padding: 0 20rpx 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666666;
  display: block;
}

/* 搜索框 */
.search-container {
  position: relative;
  margin: 0 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 80rpx 20rpx 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  font-size: 24rpx;
  color: #333333;
  box-sizing: border-box;
}

.search-input:focus {
  outline: none;
  box-shadow: 0 6rpx 16rpx rgba(245, 158, 11, 0.2);
  border-color: rgba(245, 158, 11, 0.3);
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999999;
}

/* 课程分类 */
.category-section {
  padding: 0 20rpx;
}

.category-header {
  margin-bottom: 20rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.category-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-icon.tax {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e3a8a;
}

.category-icon.accounting {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e3a8a;
}

.category-icon.finance {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e3a8a;
}

.category-icon.business {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e3a8a;
}

.category-text {
  font-size: 22rpx;
  color: #333333;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

/* 推荐课程 */
.recommended-section {
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.section-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
}

.action-text {
  font-size: 22rpx;
  color: #666666;
}

.action-arrow {
  font-size: 24rpx;
  color: #666666;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-card {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.course-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.course-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
}

.course-cover .cover-icon {
  font-size: 48rpx;
}

.course-duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.course-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.course-description {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-author {
  font-size: 20rpx;
  color: #999999;
}

.course-price {
  font-size: 22rpx;
  font-weight: bold;
  color: #ef4444;
}

.course-price.free {
  color: #00b578;
}

/* 精选文章 */
.articles-section {
  padding: 0 20rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-card {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.article-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.article-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-excerpt {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article-date {
  font-size: 20rpx;
  color: #999999;
}

.article-reads {
  font-size: 20rpx;
  color: #999999;
}

.article-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

/* 学习进度 */
.progress-section {
  padding: 0 20rpx;
}

.progress-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-card {
  padding: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.progress-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.progress-percentage {
  font-size: 24rpx;
  font-weight: bold;
  color: #1e3a8a;
  white-space: nowrap;
}

.progress-bar {
  position: relative;
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 0 12rpx 80rpx;
    gap: 24rpx;
  }
  
  .header {
    padding: 0 12rpx 20rpx;
  }
  
  .search-container {
    margin: 0 12rpx;
  }
  
  .category-section,
  .recommended-section,
  .articles-section,
  .progress-section {
    padding: 0 12rpx;
  }
  
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .course-card,
  .article-card {
    flex-direction: column;
  }
  
  .course-cover {
    width: 100%;
    height: 200rpx;
  }
  
  .article-icon {
    width: 100%;
    height: 160rpx;
  }
}