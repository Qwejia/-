.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.content-scroll {
  flex: 1;
  height: 100vh;
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.profile-section {
  margin-bottom: 8rpx;
}

.profile-card {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  position: relative;
  overflow: hidden;
}

.profile-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.avatar-wrapper {
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 9999rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  font-size: 18rpx;
  font-weight: 700;
  padding: 8rpx 12rpx;
  border-radius: 9999rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
}

.profile-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.user-account {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.profile-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.stat-divider {
  width: 1px;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
}

.month-stats-section {
  margin-bottom: 8rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.stat-icon {
  font-size: 32rpx;
}

.stat-card .stat-label {
  font-size: 20rpx;
  color: #64748b;
}

.stat-card .stat-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.stat-card.income .stat-number {
  color: #059669;
}

.stat-card.expense .stat-number {
  color: #dc2626;
}

.stat-card.balance .stat-number {
  color: #1e3a8a;
}

.modules-section {
  margin-bottom: 8rpx;
}

.modules-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.module-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.module-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.module-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module-icon-wrapper.ledger {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.module-icon-wrapper.receivable {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.module-icon-wrapper.category {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.module-icon-wrapper.record {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.module-icon {
  font-size: 36rpx;
}

.module-name {
  font-size: 22rpx;
  font-weight: 600;
  color: #334155;
}

.menu-section {
  margin-bottom: 8rpx;
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.menu-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.menu-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.menu-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 24rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  font-size: 28rpx;
}

.menu-text {
  flex: 1;
  font-size: 24rpx;
  font-weight: 500;
  color: #334155;
}

.menu-arrow {
  font-size: 24rpx;
  color: #94a3b8;
}

.version-section {
  text-align: center;
  padding: 32rpx;
}

.version-text {
  font-size: 20rpx;
  color: #64748b;
}

.ai-settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #e2e8f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 9999rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #64748b;
}

.modal-body {
  padding: 24rpx;
  overflow-y: auto;
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  border: 1px solid #e2e8f0;
}

.setting-info {
  flex: 1;
  margin-right: 16rpx;
}

.setting-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #0f172a;
  display: block;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 20rpx;
  color: #64748b;
  display: block;
}

.ai-info-card {
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 24rpx;
}

.info-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #0f172a;
  display: block;
  margin-bottom: 12rpx;
}

.info-content {
  font-size: 20rpx;
  color: #64748b;
  line-height: 1.6;
  display: block;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .modules-grid {
    grid-template-columns: 1fr;
  }
  
  .profile-header {
    flex-direction: column;
    text-align: center;
  }
  
  .profile-stats {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .stat-divider {
    width: 40rpx;
    height: 1px;
  }
}