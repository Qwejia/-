.container {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  min-height: 100vh;
  padding: 0;
}

.page-header {
  background: white;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(30, 58, 138, 0.1);
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  text-align: center;
}

.content {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.module {
  background: white;
  border-radius: 20rpx;
  padding: 0;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  overflow: hidden;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.avatar-icon {
  font-size: 64rpx;
  color: white;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.user-role {
  font-size: 26rpx;
  color: #999999;
}

.module-header {
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(30, 58, 138, 0.1);
  background: #dbeafe;
}

.module-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.module-content {
  padding: 0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(30, 58, 138, 0.1);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #dbeafe;
}

.setting-label {
  font-size: 28rpx;
  color: #333333;
}

.setting-value {
  display: flex;
  align-items: center;
}

.language-picker, .timeout-picker {
  flex: 1;
}

.picker-content {
  font-size: 26rpx;
  color: #666666;
}

.arrow-icon {
  font-size: 36rpx;
  color: #999999;
  margin-left: 10rpx;
}

.button-item {
  cursor: pointer;
}

.button-item:active {
  background-color: #dbeafe;
}

.logout-section {
  padding: 30rpx 0;
}

.logout-btn {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 20rpx;
  background: white;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
}

.logout-btn:active {
  background-color: rgba(255, 77, 79, 0.1);
  transform: scale(0.98);
}

.version-info {
  text-align: center;
  padding: 30rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #999999;
}

.switch {
}

@media (max-width: 750rpx) {
  .content {
    padding: 20rpx;
    gap: 20rpx;
  }
  
  .module {
    border-radius: 16rpx;
  }
  
  .user-info {
    padding: 30rpx 20rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }
  
  .avatar-icon {
    font-size: 56rpx;
  }
  
  .user-name {
    font-size: 28rpx;
  }
  
  .user-role {
    font-size: 24rpx;
  }
  
  .module-header {
    padding: 24rpx;
  }
  
  .module-title {
    font-size: 26rpx;
  }
  
  .setting-item {
    padding: 24rpx;
  }
  
  .setting-label {
    font-size: 26rpx;
  }
  
  .picker-content {
    font-size: 24rpx;
  }
  
  .logout-btn {
    height: 90rpx;
    font-size: 32rpx;
  }
}