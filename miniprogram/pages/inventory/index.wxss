/* 库存管理首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  padding: 30rpx 0;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 统计信息 */
.stats-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-card {
  width: 48%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stats-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-value.low-stock {
  color: #f5222d;
}

.stats-value.amount {
  color: #1890ff;
}

.stats-value.in-stock {
  color: #52c41a;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: #f0f0f0;
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 最近库存变动 */
.recent-inventory-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #1890ff;
}

.inventory-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.inventory-item {
  padding: 24rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  border-left: 4rpx solid #1890ff;
}

.inventory-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.inventory-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.inventory-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.inventory-status.active {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.inventory-status.inactive {
  background-color: #fff2f0;
  color: #f5222d;
  border: 1rpx solid #ffccc7;
}

.inventory-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.inventory-spec {
  font-size: 24rpx;
  color: #666;
}

.inventory-stock {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.inventory-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-label {
  font-size: 24rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
}