.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.transfer-info {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.info-input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  padding: 0 12rpx;
  font-size: 28rpx;
}

.picker-view {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.transfer-list {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.transfer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.transfer-item:last-child {
  border-bottom: none;
}

.product-info {
  flex: 1;
  margin-right: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.product-stock {
  font-size: 26rpx;
  color: #666;
}

.transfer-quantity {
  display: flex;
  align-items: center;
}

.quantity-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.quantity-input {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  padding: 0 12rpx;
  font-size: 28rpx;
}

.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
  border: none;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}