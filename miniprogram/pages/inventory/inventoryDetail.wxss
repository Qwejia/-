.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.inventory-detail {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.info-section {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.info-value.price {
  font-weight: bold;
  color: #ff6b6b;
}

.action-buttons {
  padding: 30rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  min-width: 180rpx;
  padding: 16rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}