.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.export-btn {
  padding: 12rpx 24rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.analysis-content {
}

.stats-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  min-width: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.category-section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.category-list {
}

.category-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  flex: 1;
  margin-right: 20rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.category-count {
  font-size: 26rpx;
  color: #666;
}

.category-stats {
  text-align: right;
}

.category-stock {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.category-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
}