.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.date-bar {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.date-picker {
}

.picker-view {
  font-size: 32rpx;
  color: #333;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.inventory-check-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
  margin-bottom: 20rpx;
}

.inventory-check-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.inventory-check-item:last-child {
  border-bottom: none;
}

.inventory-info {
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.product-spec {
  font-size: 28rpx;
  color: #666;
}

.inventory-stats {
}

.stock-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.stock-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.stock-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.stock-input {
  width: 150rpx;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  padding: 0 12rpx;
  font-size: 28rpx;
}

.difference-value {
  font-size: 28rpx;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.submit-btn {
  flex: 1;
  padding: 20rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
  border: none;
}

.export-btn {
  flex: 1;
  padding: 20rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
  border: none;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}