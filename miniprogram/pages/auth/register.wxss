/* 注册页面样式 */
.register-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  padding: 0 30rpx;
  position: relative;
  overflow: hidden;
}

.register-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.register-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

.register-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

.register-form {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.95) 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
  flex: 1;
  overflow-y: auto;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10rpx);
}

.form-group {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  letter-spacing: 0.5rpx;
}

.form-input-wrapper {
  position: relative;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-input-wrapper:focus-within {
  border-color: #1e3a8a;
  background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  box-shadow: 0 0 0 6rpx rgba(30, 58, 138, 0.15), 0 4rpx 12rpx rgba(30, 58, 138, 0.2);
  transform: translateY(-2rpx);
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
  font-weight: 400;
}

.form-input::placeholder {
  color: #999;
  font-weight: 300;
}

.error-message {
  font-size: 20rpx;
  color: #dc3545;
  margin-bottom: 20rpx;
  padding: 14rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border-radius: 12rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.error-message::before {
  content: '⚠️';
  font-size: 22rpx;
}

.success-message {
  font-size: 20rpx;
  color: #28a745;
  margin-bottom: 20rpx;
  padding: 14rpx;
  background: linear-gradient(135deg, #d1fae5 0%, #bbf7d0 100%);
  border-radius: 12rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.success-message::before {
  content: '✅';
  font-size: 22rpx;
}

.register-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(30, 58, 138, 0.4);
  position: relative;
  overflow: hidden;
}

.register-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.register-button:hover::before {
  left: 100%;
}

.register-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.register-button[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow: none;
  cursor: not-allowed;
}

.login-link-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
}

.login-link-text {
  font-size: 22rpx;
  color: #666;
  margin-right: 10rpx;
  font-weight: 400;
}

.login-link {
  font-size: 22rpx;
  color: #1e3a8a;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.login-link:hover {
  color: #1e40af;
  background: rgba(30, 58, 138, 0.1);
}

.register-footer {
  margin-top: auto;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .register-header {
    padding-top: 60rpx;
  }
  
  .register-form {
    padding: 30rpx;
  }
  
  .form-input {
    height: 65rpx;
  }
  
  .register-button {
    height: 70rpx;
  }
}