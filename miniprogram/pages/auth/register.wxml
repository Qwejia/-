<!-- 注册页面结构 -->
<view class="register-container">
  <view class="register-header">
    <text class="register-title">用户注册</text>
    <text class="register-subtitle">创建新的企业账号</text>
  </view>

  <view class="register-form">
    <view class="form-group">
      <text class="form-label">用户名</text>
      <view class="form-input-wrapper">
        <input 
          type="text" 
          class="form-input" 
          placeholder="请输入用户名" 
          value="{{username}}" 
          bindinput="handleUsernameInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">密码</text>
      <view class="form-input-wrapper">
        <input 
          type="password" 
          class="form-input" 
          placeholder="请输入密码（至少6位）" 
          value="{{password}}" 
          bindinput="handlePasswordInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">确认密码</text>
      <view class="form-input-wrapper">
        <input 
          type="password" 
          class="form-input" 
          placeholder="请再次输入密码" 
          value="{{confirmPassword}}" 
          bindinput="handleConfirmPasswordInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">姓名</text>
      <view class="form-input-wrapper">
        <input 
          type="text" 
          class="form-input" 
          placeholder="请输入真实姓名" 
          value="{{name}}" 
          bindinput="handleNameInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">部门</text>
      <view class="form-input-wrapper">
        <input 
          type="text" 
          class="form-input" 
          placeholder="请输入所属部门" 
          value="{{department}}" 
          bindinput="handleDepartmentInput"
        />
      </view>
    </view>

    <view class="form-group">
      <text class="form-label">手机号</text>
      <view class="form-input-wrapper">
        <input 
          type="number" 
          class="form-input" 
          placeholder="请输入手机号" 
          value="{{phone}}" 
          bindinput="handlePhoneInput"
        />
      </view>
    </view>

    <view wx:if="{{error}}" class="error-message">
      {{error}}
    </view>

    <view wx:if="{{success}}" class="success-message">
      {{success}}
    </view>

    <button 
      class="register-button" 
      bindtap="register" 
      loading="{{loading}}" 
      disabled="{{loading}}"
    >
      注册
    </button>

    <view class="login-link-container">
      <text class="login-link-text">已有账号？</text>
      <navigator url="/pages/auth/login" class="login-link">立即登录</navigator>
    </view>
  </view>

  <view class="register-footer">
    <text class="footer-text">© 2026 用友软件股份有限公司</text>
  </view>
</view>