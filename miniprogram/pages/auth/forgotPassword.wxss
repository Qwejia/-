/* 忘记密码页面样式 */
.forgot-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  padding: 0 30rpx;
  position: relative;
  overflow: hidden;
}

.forgot-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
  margin-bottom: 60rpx;
}

.forgot-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.forgot-subtitle {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.forgot-form {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
  flex: 1;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 22rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.form-input-wrapper {
  position: relative;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.form-input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 22rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
}

.verification-code-wrapper {
  display: flex;
  align-items: center;
}

.verification-code-input {
  flex: 1;
  padding-right: 10rpx;
}

.verification-code-button {
  width: 200rpx;
  height: 50rpx;
  background-color: #667eea;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 18rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.verification-code-button:hover {
  opacity: 0.9;
  background-color: #764ba2;
}

.verification-code-button[disabled] {
  opacity: 0.6;
  background-color: #ccc;
}

.error-message {
  font-size: 18rpx;
  color: #dc3545;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #f8d7da;
  border-radius: 8rpx;
}

.success-message {
  font-size: 18rpx;
  color: #28a745;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #d4edda;
  border-radius: 8rpx;
}

.reset-button {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.reset-button:hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.reset-button[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow: none;
}

.login-link-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.login-link-text {
  font-size: 20rpx;
  color: #666;
  margin-right: 10rpx;
}

.login-link {
  font-size: 20rpx;
  color: #1e3a8a;
  text-decoration: none;
  transition: color 0.3s ease;
}

.login-link:hover {
  color: #1e40af;
}

.forgot-footer {
  margin-top: auto;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-text {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .forgot-header {
    padding-top: 60rpx;
  }
  
  .forgot-form {
    padding: 30rpx;
  }
  
  .form-input {
    height: 65rpx;
  }
  
  .verification-code-button {
    width: 180rpx;
    height: 45rpx;
    font-size: 16rpx;
  }
  
  .reset-button {
    height: 70rpx;
  }
}