.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.notification-btn {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notification-icon {
  font-size: 28rpx;
}

.badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ef4444;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 700;
  padding: 0 8rpx;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.status-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.status-card {
  background: linear-gradient(135deg, rgba(255,255,255,1) 0%, rgba(241,245,249,0.98) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  border: 1px solid #e2e8f0;
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
}

.status-card.invoice {
  border-top: 4rpx solid #1e3a8a;
}

.status-card.tax {
  border-top: 4rpx solid #1e3a8a;
}

.status-card.data {
  border-top: 4rpx solid #0ea5e9;
}

.card-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.card-icon {
  font-size: 28rpx;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.card-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.card-arrow {
  font-size: 24rpx;
  color: #94a3b8;
}

.functions-section {
  margin-bottom: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.more-link {
  font-size: 22rpx;
  color: #1e3a8a;
  font-weight: 600;
}

.functions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.25s;
}

.function-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.function-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-icon-wrapper.invoice {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.function-icon-wrapper.tax {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.function-icon-wrapper.data {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.function-icon-wrapper.bank {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
}

.function-icon-wrapper.voucher {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.function-icon-wrapper.report {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.function-icon {
  font-size: 40rpx;
}

.function-label {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
}

.function-desc {
  font-size: 22rpx;
  color: #64748b;
}

.tasks-section {
  margin-bottom: 8rpx;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.task-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.task-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.task-deadline {
  font-size: 20rpx;
  color: #64748b;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.task-status.pending {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}

.task-status.in-progress {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
  color: #1e40af;
}

.task-status.completed {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  color: #059669;
}

.stats-section {
  margin-bottom: 8rpx;
}

.period-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.period-text {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.period-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.stat-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.stat-trend.up {
  color: #10b981;
}

.stat-trend.down {
  color: #ef4444;
}

.empty-state {
  padding: 64rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #64748b;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .status-cards,
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .functions-grid {
    grid-template-columns: 1fr;
  }
}