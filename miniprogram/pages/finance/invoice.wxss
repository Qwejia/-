.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: slideDown 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.header-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.action-icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1f5f9;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-icon-btn:active {
  transform: scale(0.95);
  background: #e2e8f0;
}

.action-icon-btn:hover {
  background: #e2e8f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.add-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.add-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

.add-btn:hover {
  box-shadow: 0 6rpx 20rpx rgba(240, 147, 251, 0.5);
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.1s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.stat-value.amount {
  color: #059669;
}

.stat-value.tax {
  color: #dc2626;
}

.filter-bar {
  margin-bottom: 16rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.2s both;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.search-box:focus-within {
  box-shadow: 0 4rpx 16rpx rgba(240, 147, 251, 0.2);
  transform: translateY(-2rpx);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #94a3b8;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #1e3a8a;
}

.search-input::placeholder {
  color: #94a3b8;
}

.filter-row {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.3s both;
}

.filter-picker {
  flex: 1;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter-picker:active {
  transform: scale(0.98);
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-label {
  font-size: 24rpx;
  color: #1e3a8a;
}

.picker-arrow {
  font-size: 20rpx;
  color: #94a3b8;
}

.batch-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.4s both;
}

.selected-count {
  font-size: 26rpx;
  color: #1e3a8a;
  font-weight: 500;
}

.batch-buttons {
  display: flex;
  gap: 12rpx;
}

.batch-btn {
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.batch-btn:active {
  transform: scale(0.95);
}

.cancel-btn {
  background: #f1f5f9;
  color: #64748b;
}

.cancel-btn:active {
  background: #e2e8f0;
}

.confirm-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.confirm-btn:active {
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

.content {
  padding: 10rpx 0;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #f093fb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #64748b;
}

.invoice-list {
  max-height: 1200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.invoice-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  animation: cardAppear 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border: 2rpx solid transparent;
}

.invoice-card:nth-child(1) {
  animation-delay: 0.1s;
}

.invoice-card:nth-child(2) {
  animation-delay: 0.2s;
}

.invoice-card:nth-child(3) {
  animation-delay: 0.3s;
}

.invoice-card:nth-child(n+4) {
  animation-delay: 0.4s;
}

@keyframes cardAppear {
  from {
    opacity: 0;
    transform: translateY(30rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.invoice-card:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.invoice-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.invoice-card.selected {
  border-color: #f093fb;
  background: rgba(240, 147, 251, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.invoice-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #cbd5e1;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.checkbox.checked {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-color: #f093fb;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.invoice-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.invoice-no {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.invoice-type {
  font-size: 22rpx;
  color: #64748b;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.status-pending {
  background: #fef3c7;
  color: #d97706;
}

.status-verified {
  background: #d1fae5;
  color: #059669;
}

.status-cancelled {
  background: #fee2e2;
  color: #dc2626;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #64748b;
}

.value {
  font-size: 24rpx;
  color: #1e3a8a;
  font-weight: 500;
}

.value.amount {
  color: #059669;
  font-weight: bold;
}

.value.tax {
  color: #dc2626;
  font-weight: bold;
}

.value.total {
  color: #1e3a8a;
  font-size: 26rpx;
  font-weight: bold;
}

.value.category {
  padding: 4rpx 12rpx;
  background: #f1f5f9;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.card-footer {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.action-btn:active::before {
  width: 200rpx;
  height: 200rpx;
}

.detail-btn {
  background: #f1f5f9;
  color: #475569;
}

.detail-btn:active {
  transform: scale(0.95);
  background: #e2e8f0;
}

.detail-btn:hover {
  background: #e2e8f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.primary-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.primary-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

.primary-btn:hover {
  box-shadow: 0 6rpx 20rpx rgba(240, 147, 251, 0.5);
}

.disabled-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx;
  background: #f1f5f9;
  color: #94a3b8;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  border: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  animation: fadeIn 0.5s ease;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}