.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 0 32rpx;
  position: relative;
  animation: slideDown 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.navbar-left {
  flex: 1;
}

.back-btn {
  font-size: 40rpx;
  color: #1e3a8a;
  line-height: 88rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.back-btn:active {
  transform: scale(0.9);
  color: #4facfe;
}

.navbar-center {
  flex: 2;
  text-align: center;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.navbar-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.help-btn {
  font-size: 32rpx;
  color: #1e3a8a;
  background-color: rgba(79, 172, 254, 0.1);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.help-btn:active {
  transform: scale(0.9);
  background-color: rgba(79, 172, 254, 0.2);
}

.help-btn:hover {
  background-color: rgba(79, 172, 254, 0.15);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.content {
  flex: 1;
  padding: 32rpx;
}

.connection-status {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.1s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.status-indicator {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.status-indicator.connected {
  background-color: #d1fae5;
  color: #059669;
}

.status-indicator.disconnected {
  background-color: #fee2e2;
  color: #dc2626;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.status-description {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.connect-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.connect-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.connect-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.connect-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.4);
}

.connect-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(79, 172, 254, 0.5);
}

.sync-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.2s both;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.sync-status {
  font-size: 20rpx;
  color: #94a3b8;
}

.sync-modules {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.module-card {
  background-color: rgba(79, 172, 254, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #4facfe;
  transition: all 0.3s ease;
  cursor: pointer;
}

.module-card:hover {
  background-color: rgba(79, 172, 254, 0.1);
  transform: translateX(8rpx);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.2);
}

.module-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.module-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  transition: transform 0.3s ease;
}

.module-card:hover .module-icon {
  transform: scale(1.1);
}

.module-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #1e3a8a;
}

.module-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.module-description {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

.sync-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sync-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.sync-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.sync-btn:active::before {
  width: 200rpx;
  height: 200rpx;
}

.sync-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.4);
}

.sync-btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.5);
}

.sync-settings {
  border-top: 1rpx solid rgba(30, 58, 138, 0.2);
  padding-top: 24rpx;
}

.settings-header {
  margin-bottom: 24rpx;
}

.settings-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

.settings-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(30, 58, 138, 0.1);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 24rpx;
  color: #666666;
}

.picker-value {
  font-size: 24rpx;
  color: #333333;
  padding: 8rpx 16rpx;
  background-color: #dbeafe;
  border-radius: 6rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.2);
}

.setting-btn {
  background-color: #dbeafe;
  color: #333333;
  border: 1rpx solid rgba(30, 58, 138, 0.2);
  border-radius: 6rpx;
  padding: 12rpx 24rpx;
  font-size: 20rpx;
  transition: all 0.3s ease;
}

.setting-btn:hover {
  background: linear-gradient(135deg, #bfdbfe 0%, #fcd34d 100%);
  transform: translateY(-1rpx);
}

.disconnected-tips {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  padding: 48rpx 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.tips-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.tips-description {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 32rpx;
  text-align: center;
}

.tips-features {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
}

.feature-item {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
}

.sync-task {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: rgba(30, 58, 138, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 16rpx;
}

.sync-message {
  font-size: 20rpx;
  color: #94a3b8;
  text-align: center;
  line-height: 1.4;
}