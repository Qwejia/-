.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.date {
  font-size: 22rpx;
  color: #64748b;
}

.header-right {
  display: flex;
  gap: 16rpx;
}

.ai-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  padding: 0;
}

.ai-btn:active {
  transform: scale(0.95);
}

.ai-icon {
  font-size: 36rpx;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.entity-section {
  margin-bottom: 8rpx;
}

.entity-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
  border: 1px solid #e2e8f0;
}

.entity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.entity-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.period-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.period-text {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.period-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.metrics-section {
  margin-bottom: 8rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.metric-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.metric-item.income {
  border-top: 4rpx solid #10b981;
}

.metric-item.expense {
  border-top: 4rpx solid #ef4444;
}

.metric-item.profit {
  border-top: 4rpx solid #1e3a8a;
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.metric-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.metric-icon {
  font-size: 28rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.metric-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.metric-trend.up {
  color: #10b981;
}

.metric-trend.down {
  color: #ef4444;
}

.quick-actions-section {
  margin-bottom: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 32rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.refresh-btn {
  padding: 12rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
}

.refresh-icon {
  font-size: 24rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.action-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.action-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.action-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-wrapper.income {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.action-icon-wrapper.expense {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
}

.action-icon-wrapper.invoice {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.action-icon-wrapper.tax {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.action-icon-wrapper.data {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.action-icon-wrapper.education {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.action-icon-wrapper.shared {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
}

.action-icon-wrapper.dashboard {
  background: linear-gradient(135deg, #ccfbf1 0%, #99f6e4 100%);
}

.action-icon-wrapper.voucher {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.action-icon-wrapper.ledger {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.action-icon-wrapper.ar {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.action-icon-wrapper.ap {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
}

.action-icon {
  font-size: 36rpx;
}

.action-label {
  font-size: 22rpx;
  color: #334155;
  font-weight: 500;
  text-align: center;
}

.overview-section {
  margin-bottom: 8rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.overview-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.overview-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.overview-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.overview-value.equity {
  color: #1e3a8a;
}

.chart-section {
  margin-bottom: 8rpx;
}

.chart-toggle {
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.chart-type {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.chart-wrapper {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
}

.insight-section {
  margin-bottom: 8rpx;
}

.insight-card {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
}

.insight-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.insight-text {
  font-size: 24rpx;
  color: #ffffff;
  line-height: 1.6;
  font-weight: 500;
}

.activities-section {
  margin-bottom: 8rpx;
}

.tab-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
  transition: all 0.25s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.activity-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.activity-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-date {
  font-size: 20rpx;
  color: #64748b;
}

.activity-amount {
  font-size: 26rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.activity-amount.income {
  color: #10b981;
}

.activity-amount.expense {
  color: #ef4444;
}

.empty-activities {
  padding: 64rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #64748b;
}

.calendar-section {
  margin-bottom: 8rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.calendar-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: center;
}

.calendar-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.calendar-date {
  font-size: 26rpx;
  color: #1e3a8a;
  font-weight: 700;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .metrics-grid,
  .overview-grid {
    grid-template-columns: 1fr;
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}