/* pages/ai-assistant/tax-planning.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  padding: 0 32rpx;
  position: relative;
}

.navbar-left {
  flex: 1;
}

.back-btn {
  font-size: 40rpx;
  color: white;
  line-height: 88rpx;
}

.navbar-center {
  flex: 2;
  text-align: center;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.navbar-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.help-btn {
  font-size: 32rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 页面内容样式 */
.content {
  flex: 1;
  padding: 32rpx;
}

.planning-tools {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 工具卡片样式 */
.tool-card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tool-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #f8fafc;
  border-bottom: 1rpx solid #e2e8f0;
}

.tool-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.tool-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.tool-content {
  padding: 32rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.form-input:focus {
  outline: none;
  border-color: #1e3a8a;
  box-shadow: 0 0 0 2rpx rgba(30, 58, 138, 0.1);
}

.form-picker {
  width: 100%;
}

.picker-view {
  padding: 20rpx;
  border: 1rpx solid #e2e8f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: white;
}

/* 按钮样式 */
.calculate-btn {
  width: 100%;
  background-color: #1677ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
}

.suggest-btn {
  width: 100%;
  background-color: #1677ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
}

/* 结果容器样式 */
.result-container {
  background-color: #f0f9ff;
  border: 1rpx solid #93c5fd;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.result-label {
  display: block;
  font-size: 24rpx;
  color: #3b82f6;
  margin-bottom: 12rpx;
}

.result-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1e40af;
  margin-bottom: 12rpx;
}

.result-detail {
  font-size: 20rpx;
  color: #475569;
  line-height: 1.4;
}

/* 建议容器样式 */
.suggestions-container {
  margin-top: 24rpx;
}

.suggestions-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background-color: #f8fafc;
  border-radius: 8rpx;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 24rpx;
  color: #475569;
  line-height: 1.4;
}

/* 政策列表样式 */
.policy-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.policy-item {
  padding: 24rpx;
  background-color: #f8fafc;
  border-radius: 8rpx;
  border-left: 4rpx solid #1677ff;
  transition: all 0.3s ease;
}

.policy-item:hover {
  background-color: #eff6ff;
  transform: translateY(-2rpx);
}

.policy-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.policy-tag {
  display: inline-block;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #bfdbfe;
  color: #b45309;
  margin-bottom: 8rpx;
  margin-right: 12rpx;
}

.policy-date {
  display: block;
  font-size: 20rpx;
  color: #94a3b8;
}