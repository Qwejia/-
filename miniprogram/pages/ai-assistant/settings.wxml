<view class="settings-page">
  <view class="settings-header">
    <view class="header-content">
      <view class="header-left">
        <text class="page-title">设置</text>
        <text class="page-subtitle">个性化您的AI助手体验</text>
      </view>
      <view class="header-actions">
        <button class="icon-btn" bindtap="navigateBack">
          <text class="btn-icon">←</text>
        </button>
      </view>
    </view>
  </view>

  <scroll-view class="settings-scroll" scroll-y enhanced show-scrollbar>
    <view class="settings-content">
      <view class="settings-section">
        <view class="section-title">外观设置</view>
        <view class="settings-item">
          <view class="item-left">
            <text class="item-icon">🎨</text>
            <text class="item-label">主题</text>
          </view>
          <view class="theme-options">
            <view 
              class="theme-option {{currentTheme === 'light' ? 'active' : ''}}"
              bindtap="switchTheme"
              data-theme="light"
            >
              <text class="theme-icon">☀️</text>
              <text class="theme-name">浅色</text>
            </view>
            <view 
              class="theme-option {{currentTheme === 'dark' ? 'active' : ''}}"
              bindtap="switchTheme"
              data-theme="dark"
            >
              <text class="theme-icon">🌙</text>
              <text class="theme-name">深色</text>
            </view>
            <view 
              class="theme-option {{currentTheme === 'system' ? 'active' : ''}}"
              bindtap="switchTheme"
              data-theme="system"
            >
              <text class="theme-icon">🔄</text>
              <text class="theme-name">跟随系统</text>
            </view>
          </view>
        </view>
      </view>

      <view class="settings-section">
        <view class="section-title">通知设置</view>
        <view class="settings-item">
          <view class="item-left">
            <text class="item-icon">🔔</text>
            <text class="item-label">消息通知</text>
          </view>
          <switch 
            class="item-switch"
            checked="{{notificationEnabled}}"
            bindchange="toggleNotification"
            color="#667eea"
          />
        </view>
        <view class="settings-item">
          <view class="item-left">
            <text class="item-icon">🔊</text>
            <text class="item-label">语音提示</text>
          </view>
          <switch 
            class="item-switch"
            checked="{{voiceNotificationEnabled}}"
            bindchange="toggleVoiceNotification"
            color="#667eea"
          />
        </view>
      </view>

      <view class="settings-section">
        <view class="section-title">数据管理</view>
        <view class="settings-item clickable" bindtap="clearChatHistory">
          <view class="item-left">
            <text class="item-icon">💬</text>
            <text class="item-label">清空聊天历史</text>
          </view>
          <text class="item-arrow">→</text>
        </view>
        <view class="settings-item clickable" bindtap="clearRecentSearches">
          <view class="item-left">
            <text class="item-icon">🔍</text>
            <text class="item-label">清空最近搜索</text>
          </view>
          <text class="item-arrow">→</text>
        </view>
        <view class="settings-item clickable" bindtap="clearVoiceHistory">
          <view class="item-left">
            <text class="item-icon">🎤</text>
            <text class="item-label">清空语音历史</text>
          </view>
          <text class="item-arrow">→</text>
        </view>
      </view>

      <view class="settings-section">
        <view class="section-title">关于</view>
        <view class="settings-item clickable" bindtap="showPrivacyPolicy">
          <view class="item-left">
            <text class="item-icon">🔒</text>
            <text class="item-label">隐私政策</text>
          </view>
          <text class="item-arrow">→</text>
        </view>
        <view class="settings-item clickable" bindtap="showTermsOfService">
          <view class="item-left">
            <text class="item-icon">📄</text>
            <text class="item-label">服务条款</text>
          </view>
          <text class="item-arrow">→</text>
        </view>
        <view class="settings-item">
          <view class="item-left">
            <text class="item-icon">ℹ️</text>
            <text class="item-label">版本</text>
          </view>
          <text class="item-value">1.0.0</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>