/* pages/ai-assistant/voice-input.wxss */
.voice-input-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #eff6ff 0%, #dbeafe 100%);
  padding-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.voice-input-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.1;
  border-radius: 0 0 50% 50% / 0 0 25% 25%;
  pointer-events: none;
}

.voice-input-page::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0.05;
  border-radius: 50% 50% 0 0 / 25% 25% 0 0;
  pointer-events: none;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #333333;
  transition: all 0.3s ease;
}

.back-icon:active {
  transform: scale(0.9);
  color: #667eea;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.help-icon {
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.help-icon:active {
  background-color: #667eea;
  color: #ffffff;
  transform: scale(0.9);
}

/* 语音输入区域 */
.voice-input-area {
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.voice-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.voice-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.voice-text {
  font-size: 32rpx;
  color: #666666;
}

/* 录音状态 */
.voice-status.recording {
  animation: pulse 1.5s infinite;
}

.recording-icon {
  animation: shake 0.5s infinite;
}

.recording-text {
  color: #1e3a8a;
  font-weight: 600;
}

.recording-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.animation-circle {
  width: 16rpx;
  height: 16rpx;
  background-color: #1e3a8a;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounce 1.5s infinite;
}

.animation-circle.delay-1 {
  animation-delay: 0.2s;
}

.animation-circle.delay-2 {
  animation-delay: 0.4s;
}

/* 语音按钮 */
.voice-button-container {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.voice-button-container::before {
  content: '';
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse-ring 2s infinite;
}

@keyframes pulse-ring {
  0% {
    transform: scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.voice-button {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  touch-action: none;
  position: relative;
  z-index: 1;
}

.voice-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 100%);
  pointer-events: none;
}

.voice-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.2);
}

.voice-button.recording {
  animation: recording-pulse 1.5s infinite;
  background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
  box-shadow: 0 8rpx 20rpx rgba(245, 87, 108, 0.4);
}

@keyframes recording-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 8rpx 20rpx rgba(245, 87, 108, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(245, 87, 108, 0.5);
  }
}

.voice-button-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.voice-button.recording .voice-button-icon {
  animation: icon-shake 0.5s infinite;
}

@keyframes icon-shake {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-5deg);
  }
  75% {
    transform: rotate(5deg);
  }
}

.voice-button-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

/* 识别结果区域 */
.result-area {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-area::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.result-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background-color: rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
  font-weight: 500;
}

.action-btn:active {
  background-color: #667eea;
  color: #ffffff;
  transform: scale(0.95);
}

.result-content {
  min-height: 100rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.result-content:active {
  border-color: #667eea;
  background-color: #ffffff;
}

.result-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

/* 提取数据区域 */
.extracted-data-area {
  margin: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.extracted-data-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: block;
}

.extracted-data-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.data-item {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.data-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.data-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 功能选项 */
.function-area {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.function-item:active {
  background-color: #e8e8e8;
  transform: translateY(2rpx);
}

.function-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.function-text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 历史记录 */
.history-area {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #1e3a8a;
}

.history-time {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.history-content {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.4;
}

/* 动画效果 */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    opacity: 1;
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5rpx);
  }
  75% {
    transform: translateX(5rpx);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: scale(1);
  }
  40% {
    transform: scale(1.2);
  }
  60% {
    transform: scale(1.1);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .voice-input-area {
    padding: 40rpx 20rpx;
  }
  
  .voice-icon {
    font-size: 100rpx;
  }
  
  .voice-button {
    width: 180rpx;
    height: 180rpx;
  }
  
  .function-grid {
    gap: 16rpx;
  }
  
  .function-item {
    padding: 24rpx;
  }
}

@media (min-width: 768px) {
  .voice-input-page {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .function-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}