page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.settings-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
}

.settings-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.15);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.icon-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.btn-icon {
  font-size: 32rpx;
  color: #ffffff;
}

.settings-scroll {
  flex: 1;
  height: 100%;
}

.settings-content {
  padding: 24rpx;
}

.settings-section {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  padding: 24rpx 32rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item.clickable {
  cursor: pointer;
}

.settings-item.clickable:active {
  background-color: #f9f9f9;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.item-icon {
  font-size: 36rpx;
  width: 48rpx;
  text-align: center;
}

.item-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 400;
}

.item-value {
  font-size: 28rpx;
  color: #999999;
}

.item-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

.item-switch {
  transform: scale(0.9);
}

.theme-options {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.theme-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  background: #ffffff;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 120rpx;
}

.theme-option.active {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
}

.theme-option:active {
  transform: scale(0.95);
}

.theme-icon {
  font-size: 32rpx;
}

.theme-name {
  font-size: 24rpx;
  color: #666666;
}

.theme-option.active .theme-name {
  color: #667eea;
  font-weight: 500;
}