.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.ai-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  padding: 0;
}

.ai-btn:active {
  transform: scale(0.95);
}

.ai-icon {
  font-size: 28rpx;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.type-tabs {
  display: flex;
  gap: 16rpx;
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
  transition: all 0.25s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.amount-section {
  margin-bottom: 8rpx;
}

.amount-card {
  background: linear-gradient(135deg, rgba(255,255,255,1) 0%, rgba(241,245,249,0.98) 100%);
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  border: 1px solid #e2e8f0;
}

.amount-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.amount-input-wrapper {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.currency-symbol {
  font-size: 48rpx;
  font-weight: 700;
  color: #0f172a;
}

.amount-input {
  flex: 1;
  font-size: 48rpx;
  font-weight: 700;
  color: #0f172a;
}

.quick-amounts-section {
  margin-bottom: 8rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.quick-amounts-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.quick-amount-item {
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.quick-amount-item:active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.category-section {
  margin-bottom: 8rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.category-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.category-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-icon-wrapper.food {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
}

.category-icon-wrapper.transport {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
}

.category-icon-wrapper.shopping {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.category-icon-wrapper.entertainment {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.category-icon-wrapper.medical {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.category-icon-wrapper.education {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.category-icon-wrapper.housing {
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
}

.category-icon-wrapper.salary {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
}

.category-icon-wrapper.bonus {
  background: linear-gradient(135deg, #bfdbfe 0%, #93c5fd 100%);
}

.category-icon-wrapper.investment {
  background: linear-gradient(135deg, #ccfbf1 0%, #99f6e4 100%);
}

.category-icon-wrapper.transfer {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
}

.category-icon-wrapper.other {
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
}

.category-icon {
  font-size: 36rpx;
}

.category-name {
  font-size: 22rpx;
  color: #334155;
  font-weight: 500;
}

.form-section {
  margin-bottom: 8rpx;
}

.form-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.form-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.form-row:not(:last-child) {
  border-bottom: 1px solid #e2e8f0;
}

.form-label {
  font-size: 24rpx;
  color: #334155;
  font-weight: 500;
  width: 120rpx;
}

.form-input {
  flex: 1;
  font-size: 24rpx;
  color: #0f172a;
  text-align: right;
}

.form-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
  padding: 12rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.picker-value {
  font-size: 24rpx;
  color: #0f172a;
  font-weight: 500;
}

.picker-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.actions-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  transition: all 0.25s;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.clear {
  background: #f1f5f9;
  color: #334155;
}

.action-btn.save {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
  overflow: hidden;
  max-height: 80vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #e2e8f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 9999rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #64748b;
}

.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.account-item {
  padding: 24rpx;
  border-radius: 24rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 500;
  transition: all 0.25s;
}

.account-item.selected {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.account-name {
  text-align: center;
}

.ai-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ai-input-section {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
}

.ai-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f1f5f9;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #0f172a;
  border: 1px solid #e2e8f0;
}

.ai-analyze-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  margin-bottom: 24rpx;
}

.ai-result-section {
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 24rpx;
}

.result-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.result-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 16rpx;
  padding: 16rpx;
  border: 1px solid #e2e8f0;
}

.result-key {
  font-size: 20rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.result-value {
  font-size: 22rpx;
  color: #0f172a;
  font-weight: 600;
  display: block;
}

.apply-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .category-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .quick-amounts-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}