.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.employee-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.employee-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.employee-item:last-child {
  border-bottom: none;
}

.employee-info {
  flex: 1;
}

.employee-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.employee-id {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.employee-department {
  font-size: 28rpx;
  color: #999;
}

.employee-status {
  margin-left: 20rpx;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  background-color: #e8f5e9;
  color: #2e7d32;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}