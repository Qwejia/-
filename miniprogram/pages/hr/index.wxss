/* 人力资源首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  padding: 30rpx 0;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 统计信息 */
.stats-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-card {
  width: 48%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stats-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-value.active {
  color: #52c41a;
}

.stats-value.departments {
  color: #1890ff;
}

.stats-value.amount {
  color: #faad14;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: #f0f0f0;
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 最近员工 */
.recent-employees-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #1890ff;
}

.employees-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.employee-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  border-left: 4rpx solid #1890ff;
}

.employee-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.avatar-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.employee-info {
  flex: 1;
}

.employee-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.employee-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.employee-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.employee-status.active {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.employee-status.inactive {
  background-color: #fff2f0;
  color: #f5222d;
  border: 1rpx solid #ffccc7;
}

.employee-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.employee-department {
  font-size: 24rpx;
  color: #666;
}

.employee-position {
  font-size: 24rpx;
  color: #666;
}

.employee-contact {
  display: flex;
  gap: 20rpx;
}

.employee-phone {
  font-size: 24rpx;
  color: #999;
}

.employee-entry-date {
  font-size: 24rpx;
  color: #999;
}