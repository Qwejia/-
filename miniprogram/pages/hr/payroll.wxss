.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.period-picker {
  flex: 1;
}

.picker-view {
  font-size: 32rpx;
  color: #333;
}

.export-btn {
  padding: 12rpx 24rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.payroll-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.payroll-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.payroll-item:last-child {
  border-bottom: none;
}

.payroll-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.employee-name {
  font-size: 36rpx;
  font-weight: bold;
}

.payroll-period {
  font-size: 28rpx;
  color: #666;
}

.payroll-body {
  margin-bottom: 20rpx;
}

.payroll-info {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.payroll-amount {
  display: flex;
  align-items: baseline;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.amount-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.payroll-footer {
  text-align: right;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  background-color: #e8f5e9;
  color: #2e7d32;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}