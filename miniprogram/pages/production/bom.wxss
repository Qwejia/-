.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.export-btn {
  padding: 12rpx 24rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.bom-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.bom-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.bom-item:last-child {
  border-bottom: none;
}

.bom-header {
  margin-bottom: 16rpx;
}

.bom-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.bom-product {
  font-size: 28rpx;
  color: #666;
}

.bom-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bom-items {
  display: flex;
  align-items: center;
}

.items-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.items-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.bom-footer {
  text-align: right;
}

.bom-info {
  font-size: 24rpx;
  color: #1890ff;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}