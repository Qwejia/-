.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.export-btn {
  padding: 12rpx 24rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.analysis-content {
}

.stats-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  min-width: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.trend-list {
}

.trend-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.trend-month {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}

.trend-bar {
  flex: 1;
  height: 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.bar {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.trend-value {
  width: 100rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  text-align: right;
}

.status-distribution {
}

.status-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}