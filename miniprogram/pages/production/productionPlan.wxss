.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.production-plan-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.production-plan-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.production-plan-item:last-child {
  border-bottom: none;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.plan-body {
}

.plan-info {
  display: flex;
  margin-bottom: 12rpx;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.plan-dates {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.date-label {
  margin-right: 8rpx;
}

.date-value {
  margin-right: 20rpx;
  font-weight: bold;
  color: #333;
}

.date-separator {
  margin: 0 10rpx;
  color: #999;
}

.empty-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
}