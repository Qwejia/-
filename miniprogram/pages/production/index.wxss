/* 生产制造首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  padding: 30rpx 0;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 统计信息 */
.stats-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-card {
  width: 48%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stats-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-value.pending {
  color: #faad14;
}

.stats-value.completed {
  color: #52c41a;
}

.stats-value.workshop {
  color: #1890ff;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.menu-item:active {
  background-color: #f0f0f0;
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 最近生产计划 */
.recent-plans-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #1890ff;
}

.plans-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-item {
  padding: 24rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  border-left: 4rpx solid #1890ff;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.plan-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}

.plan-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.plan-status.pending {
  background-color: #fffbe6;
  color: #faad14;
  border: 1rpx solid #ffe58f;
}

.plan-status.inProgress {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.plan-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.plan-product {
  font-size: 24rpx;
  color: #666;
}

.plan-quantity {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.plan-dates {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
}

.date-label {
  font-size: 24rpx;
  color: #666;
}

.date-value {
  font-size: 24rpx;
  color: #333;
}