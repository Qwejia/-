.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  padding: 40rpx;
  text-align: center;
  color: #666;
}

.workshop-content {
}

.section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.workshop-list {
}

.workshop-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.workshop-item:last-child {
  border-bottom: none;
}

.workshop-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.workshop-info {
  font-size: 26rpx;
  color: #666;
}

.divider {
  margin: 0 12rpx;
  color: #999;
}

.workshop-order-list {
}

.workshop-order-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.workshop-order-item:last-child {
  border-bottom: none;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-workshop {
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.order-body {
  margin-bottom: 16rpx;
}

.order-info {
  display: flex;
  margin-bottom: 12rpx;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-progress {
  display: flex;
  align-items: center;
}

.progress-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.progress-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-footer {
  text-align: right;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}