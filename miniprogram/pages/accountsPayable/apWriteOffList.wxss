.container {
  padding: 20rpx;
  background-color: transparent;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.writeoff-list {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 32rpx;
}

.writeoff-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.writeoff-item:last-child {
  border-bottom: none;
}

.writeoff-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.supplier-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.writeoff-date {
  font-size: 24rpx;
  color: #999;
}

.writeoff-details {
  margin-bottom: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.detail-item {
  display: flex;
  font-size: 28rpx;
}

.detail-item.full-width {
  flex: 1;
}

.label {
  color: #666;
  margin-right: 10rpx;
  min-width: 80rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.value.amount {
  color: #1aad19;
  font-weight: bold;
}