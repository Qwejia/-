.container {
  padding: 20rpx;
  background-color: transparent;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #3399ff;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
}

.search-bar {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}

.filter-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.filter-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.filter-item.active {
  background-color: #3399ff;
  color: white;
  border-color: #3399ff;
}

.invoice-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.invoice-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.invoice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.invoice-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.invoice-date {
  font-size: 24rpx;
  color: #999;
}

.invoice-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.invoice-amount {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-badge.unpaid {
  background-color: #fdeeee;
  color: #e64340;
}

.status-badge.partiallypaid {
  background-color: #dbeafe;
  color: #1e3a8a;
}

.status-badge.paid {
  background-color: #e6f4ea;
  color: #1aad19;
}

.invoice-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  text-align: center;
}

.action-btn.view {
  background-color: #3399ff;
  color: white;
}

.action-btn.edit {
  background-color: #ff9900;
  color: white;
}

.action-btn.delete {
  background-color: #e64340;
  color: white;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
