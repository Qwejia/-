.container {
  padding: 20rpx;
  background-color: transparent;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #3399ff;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-bar {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  color: #666;
  margin: 0 10rpx 10rpx 0;
}

.filter-item.active {
  background-color: #3399ff;
  color: white;
}

.payment-list {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 32rpx;
}

.payment-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
}

.payment-item:last-child {
  border-bottom: none;
}

.payment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.payment-info {
  flex: 1;
}

.payment-code {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.supplier-name {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.payment-date {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.status-badge.pending {
  background-color: #fff7e8;
  color: #ff9900;
}

.status-badge.completed {
  background-color: #e6f4ea;
  color: #1aad19;
}

.payment-details {
  margin-bottom: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.detail-item {
  display: flex;
  font-size: 28rpx;
}

.label {
  color: #666;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.payment-remark {
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.payment-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
}

.action-btn.view {
  background-color: #e8f4fd;
  color: #3399ff;
}

.action-btn.delete {
  background-color: #fdeeee;
  color: #e64340;
}