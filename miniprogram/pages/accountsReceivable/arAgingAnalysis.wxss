/* pages/accountsReceivable/arAgingAnalysis.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
  position: relative;
}

/* 加载状态样式 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-content {
  background-color: #333;
  color: white;
  padding: 30rpx 50rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.loading-text {
  font-size: 32rpx;
  font-weight: bold;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.export-btn {
  background-color: #2196f3;
  color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.export-text {
  font-size: 28rpx;
}

.filter-section {
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.filter-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex: 1;
  min-width: 300rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 15rpx;
}

.filter-picker {
  flex: 1;
  background: #dbeafe;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.2);
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.summary-section {
  margin-bottom: 30rpx;
}

.summary-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.chart-container {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.chart-type-selector {
  background-color: white;
  border-radius: 8rpx;
  padding: 8rpx 15rpx;
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.chart-type-picker {
  font-size: 26rpx;
  color: #333;
}

.chart {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.bar-chart {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.chart-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  min-height: 60rpx;
  transition: all 0.3s ease;
}

.chart-bar:nth-child(1) {
  background: linear-gradient(90deg, #4CAF50 0%, #81C784 100%);
}

.chart-bar:nth-child(2) {
  background: linear-gradient(90deg, #1e3a8a 0%, #1e40af 100%);
}

.chart-bar:nth-child(3) {
  background: linear-gradient(90deg, #FFC107 0%, #FFD54F 100%);
}

.chart-bar:nth-child(4) {
  background: linear-gradient(90deg, #FF9800 0%, #FFB74D 100%);
}

.chart-bar:nth-child(5) {
  background: linear-gradient(90deg, #F44336 0%, #E57373 100%);
}

.bar-label {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.bar-value {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.pie-chart {
  padding: 20rpx;
}

.pie-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pie-legend {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 10rpx;
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.legend-label {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.legend-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
}

.summary-content {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.summary-item {
  flex: 1;
  min-width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.summary-item.total {
  background: #dbeafe;
  border: 2rpx solid #1e3a8a;
}

.summary-value.total {
  color: #1e3a8a;
}

.detail-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.detail-header {
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.table-container {
  border-radius: 8rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background-color: #f5f7fa;
  padding: 15rpx;
  border-bottom: 2rpx solid #e0e0e0;
  font-weight: bold;
}

.table-row {
  display: flex;
  padding: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  font-size: 26rpx;
  text-align: center;
  padding: 0 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.table-cell.customer {
  text-align: left;
  flex: 2;
}

.table-cell.period {
  flex: 1;
}

.table-cell.total {
  flex: 1;
  font-weight: bold;
  color: #1e3a8a;
}

.empty-data {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}