/* pages/accountsReceivable/arInvoiceDetail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 头部区域 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  color: #666;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

/* 表单区域 */
.form-section {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-value {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 20rpx;
  min-height: 70rpx;
  display: flex;
  align-items: center;
}

.form-picker {
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 20rpx;
  background-color: white;
}

.picker-content {
  font-size: 28rpx;
  color: #333;
}

.form-picker:disabled .picker-content {
  color: #999;
  background-color: #f5f5f5;
}

.form-input {
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input:disabled {
  color: #999;
  background-color: #f5f5f5;
}

.form-radio {
  display: flex;
  gap: 30rpx;
  margin-top: 10rpx;
}

.form-radio radio {
  margin-right: 10rpx;
  transform: scale(1.2);
}

.form-textarea {
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 150rpx;
  resize: none;
}

.form-textarea:disabled {
  color: #999;
  background-color: #f5f5f5;
}

/* 状态显示 */
.status-container {
  margin-top: 10rpx;
}

.status-item {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #333;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 50rpx;
}

.save-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn {
  flex: 1;
  background-color: #667eea;
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.cancel-btn {
  flex: 1;
  background-color: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  color: #666;
  padding: 20rpx;
  font-size: 30rpx;
}

.view-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.approve-btn {
  background-color: #4caf50;
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.close-btn {
  background-color: #ff5722;
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
}