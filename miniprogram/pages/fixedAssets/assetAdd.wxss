/* 资产新增页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 20rpx;
  color: #666;
  display: block;
}

.asset-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 20rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.required {
  position: relative;
}

.required::after {
  content: '*';
  color: #dc3545;
  margin-left: 5rpx;
}

.form-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 20rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 10rpx;
  outline: none;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-picker {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 20rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.form-picker:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.picker-text {
  flex: 1;
  color: #666;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  font-size: 20rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 10rpx;
  outline: none;
  resize: vertical;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.error-message {
  font-size: 18rpx;
  color: #dc3545;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background-color: #f8d7da;
  border-radius: 8rpx;
}

.success-message {
  font-size: 18rpx;
  color: #28a745;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background-color: #d4edda;
  border-radius: 8rpx;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.cancel-button {
  flex: 1;
  height: 70rpx;
  background-color: #6c757d;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cancel-button:hover {
  opacity: 0.9;
  background-color: #5a6268;
}

.save-button {
  flex: 1;
  height: 70rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.save-button:hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.save-button[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow: none;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .asset-form {
    padding: 20rpx;
  }
  
  .form-input {
    height: 65rpx;
  }
  
  .form-picker {
    height: 65rpx;
  }
  
  .form-actions {
    flex-direction: column;
  }
  
  .cancel-button,
  .save-button {
    width: 100%;
  }
}