.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.account-info {
  margin-bottom: 20rpx;
}

.account-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.account-code {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: bold;
  display: block;
}

/* 筛选区域 */
.filter-section {
  background: white;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-container {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

/* 筛选选项 */
.filter-options {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.filter-item {
  flex: 1;
  min-width: calc(33.33% - 10rpx);
}

/* 日期选择器 */
.date-picker-container {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.date-picker-item {
  flex: 1;
}

/* 选择器样式 */
.picker-container {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-arrow {
  font-size: 36rpx;
  color: #999;
}

/* 重置筛选按钮 */
.reset-filters-btn {
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 交易列表 */
.transactions-list {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 0 20rpx 30rpx;
  overflow: hidden;
}

/* 列表头部 */
.list-header {
  background: #f5f5f5;
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.header-item {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.header-date {
  flex: 1.5;
}

.header-desc {
  flex: 3;
}

.header-voucher {
  flex: 1.5;
}

.header-amount {
  flex: 1.5;
  text-align: right;
}

/* 交易项 */
.transaction-item {
  display: flex;
  padding: 25rpx 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  align-items: center;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background: #f9fafb;
}

/* 交易项内容 */
.transaction-date {
  flex: 1.5;
  font-size: 26rpx;
  color: #666;
}

.transaction-desc {
  flex: 3;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-voucher {
  flex: 1.5;
  font-size: 26rpx;
  color: #1677ff;
  font-weight: bold;
}

.transaction-amount {
  flex: 1.5;
  font-size: 30rpx;
  font-weight: bold;
  text-align: right;
}

.transaction-debit {
  color: #dc2626;
}

.transaction-credit {
  color: #059669;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 26rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .page-header {
    padding: 20rpx;
  }
  
  .account-name {
    font-size: 32rpx;
  }
  
  .account-code {
    font-size: 24rpx;
  }
  
  .filter-section {
    padding: 15rpx;
  }
  
  .filter-options {
    flex-direction: column;
  }
  
  .filter-item {
    min-width: 100%;
  }
  
  .date-picker-container {
    flex-direction: column;
  }
  
  .transactions-list {
    margin: 0 10rpx 20rpx;
  }
  
  .transaction-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
    padding: 20rpx;
  }
  
  .transaction-date, .transaction-desc, .transaction-voucher, .transaction-amount {
    flex: none;
    width: 100%;
    text-align: left;
  }
  
  .list-header {
    display: none;
  }
}