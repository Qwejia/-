/* pages/generalLedger/voucherList.wxss */
.container {
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
}

/* 筛选条件 */
.filter-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.picker {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background-color: #fff;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.reset-btn {
  display: flex;
  justify-content: center;
}

/* 凭证列表 */
.vouchers-section {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}

.vouchers-list {
  max-height: calc(100vh - 500rpx);
  overflow-y: auto;
}

.voucher-item {
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.voucher-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.voucher-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.voucher-info {
  display: flex;
  align-items: center;
}

.voucher-number {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.voucher-date {
  font-size: 26rpx;
  color: #666;
}

.voucher-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.voucher-status.draft {
  background-color: #fff7e6;
  color: #fa8c16;
}

.voucher-status.submitted {
  background-color: #e6f7ff;
  color: #1890ff;
}

.voucher-status.approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.voucher-status.posted {
  background-color: #f9f0ff;
  color: #722ed1;
}

.voucher-amounts {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.amount-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.amount-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.amount {
  font-size: 28rpx;
  font-weight: bold;
}

.amount.debit {
  color: #ff4d4f;
}

.amount.credit {
  color: #52c41a;
}

.voucher-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 新增按钮 */
.add-button {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.add-button .btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  line-height: 120rpx;
  padding: 0;
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}