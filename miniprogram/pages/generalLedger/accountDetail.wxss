.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.account-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.account-code {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 账户详情卡片 */
.account-detail-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 近期交易区域 */
.recent-transactions {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.transactions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.transactions-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.view-all-btn {
  font-size: 26rpx;
  color: #1677ff;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  flex: 1;
}

.transaction-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
  display: block;
}

.transaction-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-voucher {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.transaction-amount {
  font-size: 30rpx;
  font-weight: bold;
}

.transaction-debit {
  color: #dc2626;
}

.transaction-credit {
  color: #059669;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 30rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.edit-btn {
  background: #1677ff;
  color: white;
}

.view-all-transactions-btn {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #e5e7eb;
}

/* 辅助核算标签 */
.aux-accounting-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.aux-tag {
  padding: 8rpx 20rpx;
  background: #e0f2fe;
  color: #0369a1;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 12rpx;
  }
  
  .page-header, .account-detail-card, .recent-transactions {
    padding: 20rpx;
  }
  
  .account-name {
    font-size: 32rpx;
  }
  
  .account-code {
    font-size: 24rpx;
  }
  
  .section-title, .transactions-title {
    font-size: 26rpx;
  }
  
  .detail-label, .detail-value, .transaction-desc, .action-btn {
    font-size: 24rpx;
  }
  
  .transaction-date, .transaction-voucher {
    font-size: 20rpx;
  }
  
  .transaction-amount {
    font-size: 26rpx;
  }
  
  .action-buttons {
    padding: 0 12rpx 20rpx;
  }
  
  .action-btn {
    height: 80rpx;
  }
}