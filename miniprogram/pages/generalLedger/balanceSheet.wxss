/* pages/generalLedger/balanceSheet.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.search-section {
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.filter-section {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  flex: 1;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-item .label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.picker {
  border: 1rpx solid #e8e8e8;
  border-radius: 6rpx;
  padding: 16rpx;
  background-color: #fafafa;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.balance-section {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.balance-header {
  display: flex;
  background-color: #f5f5f5;
  padding: 16rpx 20rpx;
  border-radius: 6rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-item {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.balance-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.balance-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.balance-item:last-child {
  border-bottom: none;
}

.item-code {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.item-name {
  flex: 1.5;
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.item-category {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.item-opening,
.item-debit,
.item-credit,
.item-closing {
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  font-weight: 500;
}

.item-debit {
  color: #e64340;
}

.item-credit {
  color: #2ecc71;
}

.item-opening.debit,
.item-closing.debit {
  color: #e64340;
}

.item-opening.credit,
.item-closing.credit {
  color: #2ecc71;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}