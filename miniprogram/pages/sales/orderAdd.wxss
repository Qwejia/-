.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.form-input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  padding: 0 12rpx;
  font-size: 28rpx;
}

.form-picker {
  flex: 1;
}

.picker-view {
  font-size: 28rpx;
  color: #333;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  color: #ff6b6b;
}

.order-items {
  margin-bottom: 20rpx;
}

.order-item {
  background-color: #f9f9f9;
  border-radius: 4rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-index {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.delete-btn {
  padding: 8rpx 16rpx;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 4rpx;
  font-size: 24rpx;
  border: 1rpx solid #ffcdd2;
}

.add-item-btn {
  width: 100%;
  padding: 16rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 4rpx;
  font-size: 28rpx;
  border: 1rpx dashed #e0e0e0;
}

.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
  border: none;
}