/* pages/accountsReceivable/customerList.wxss */
.container {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  min-height: 100vh;
  padding: 20rpx;
}

/* 头部区域 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.add-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 筛选区域 */
.filter-section {
  display: flex;
  margin-bottom: 20rpx;
  gap: 15rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  color: #999;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border: none;
  border-radius: 8rpx;
  color: #666;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 筛选面板 */
.filter-panel {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.filter-radio {
  display: flex;
  gap: 40rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  border: none;
  border-radius: 8rpx;
  color: #666;
  padding: 15rpx;
  font-size: 28rpx;
  width: 100%;
}

/* 列表区域 */
.list-section {
  margin-bottom: 20rpx;
}

.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 客户项 */
.customer-item {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.customer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.customer-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.customer-code {
  font-size: 26rpx;
  color: #666;
  padding: 5rpx 15rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.customer-status {
  font-size: 24rpx;
  color: #333;
  padding: 5rpx 15rpx;
  border-radius: 4rpx;
}

.customer-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.detail-label {
  width: 120rpx;
  color: #666;
}

.detail-value {
  color: #333;
  flex: 1;
}

.customer-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.edit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.edit-icon {
  margin-right: 8rpx;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ef5350;
  border: none;
  border-radius: 8rpx;
  color: white;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.delete-icon {
  margin-right: 8rpx;
}