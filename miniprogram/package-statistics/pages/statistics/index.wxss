.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.period-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.period-text {
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
}

.period-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.type-tabs {
  display: flex;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
  transition: all 0.25s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.tab-item.ai-tab {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
  color: #7c3aed;
}

.overview-card {
  background: linear-gradient(135deg, rgba(255,255,255,1) 0%, rgba(241,245,249,0.98) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
  border: 1px solid #e2e8f0;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.refresh-btn {
  padding: 12rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
}

.refresh-icon {
  font-size: 24rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.overview-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  border: 1px solid #e2e8f0;
}

.overview-item.income {
  border-top: 4rpx solid #10b981;
}

.overview-item.expense {
  border-top: 4rpx solid #ef4444;
}

.overview-item.balance {
  border-top: 4rpx solid #1e3a8a;
}

.item-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.item-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.item-trend {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.item-trend.up {
  color: #10b981;
}

.item-trend.down {
  color: #ef4444;
}

.chart-section {
  margin-bottom: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.chart-tabs {
  display: flex;
  gap: 12rpx;
}

.chart-tab {
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.chart-tab.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.chart-wrapper {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
}

.category-section {
  margin-bottom: 8rpx;
}

.category-tabs {
  display: flex;
  gap: 12rpx;
}

.category-tab {
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.category-tab.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  position: relative;
}

.category-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.category-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.category-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.category-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.category-amount {
  font-size: 22rpx;
  color: #64748b;
}

.category-right {
  text-align: right;
}

.category-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e3a8a;
}

.category-bar {
  height: 8rpx;
  background: #f1f5f9;
  border-radius: 9999rpx;
  overflow: hidden;
  margin-top: 12rpx;
}

.category-bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 9999rpx;
  transition: width 0.25s;
}

.trend-section {
  margin-bottom: 8rpx;
}

.trend-wrapper {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.trend-canvas {
  width: 100%;
  height: 400rpx;
}

.habits-section {
  margin-bottom: 8rpx;
}

.habits-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.habit-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.habit-icon {
  font-size: 40rpx;
}

.habit-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.habit-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
}

.habit-value.up {
  color: #10b981;
}

.habit-value.down {
  color: #ef4444;
}

.transactions-section {
  margin-bottom: 8rpx;
}

.more-link {
  font-size: 22rpx;
  color: #1e3a8a;
  font-weight: 600;
}

.transactions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.transaction-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.transaction-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.transaction-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.transaction-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-date {
  font-size: 20rpx;
  color: #64748b;
}

.transaction-amount {
  font-size: 26rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.transaction-amount.income {
  color: #10b981;
}

.transaction-amount.expense {
  color: #ef4444;
}

.quick-functions-section {
  margin-bottom: 8rpx;
}

.functions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.function-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.function-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.function-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-icon {
  font-size: 36rpx;
}

.function-label {
  font-size: 22rpx;
  color: #334155;
  font-weight: 500;
  text-align: center;
}

.ai-insight-section {
  margin-bottom: 8rpx;
}

.insight-card {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8px 16px rgba(15, 23, 42, 0.1);
}

.insight-text {
  font-size: 24rpx;
  color: #ffffff;
  line-height: 1.6;
  font-weight: 500;
}

.empty-state {
  padding: 64rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #64748b;
}

.ai-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #e2e8f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 9999rpx;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #64748b;
}

.modal-body {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.analysis-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f1f5f9;
  border-radius: 24rpx;
}

.info-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.info-value {
  font-size: 24rpx;
  color: #0f172a;
  font-weight: 700;
}

.analysis-data {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.data-item {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  border: 1px solid #e2e8f0;
}

.data-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
}

.data-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.data-value.income {
  color: #10b981;
}

.data-value.expense {
  color: #ef4444;
}

.data-value.balance {
  color: #1e3a8a;
}

.analyze-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.analyze-btn:active {
  transform: scale(0.98);
}

.result-section {
  background: #f1f5f9;
  border-radius: 24rpx;
  padding: 24rpx;
}

.result-label {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.result-text {
  font-size: 24rpx;
  color: #0f172a;
  line-height: 1.6;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 24rpx;
  }
  
  .overview-grid,
  .analysis-data {
    grid-template-columns: 1fr;
  }
  
  .habits-grid,
  .functions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}