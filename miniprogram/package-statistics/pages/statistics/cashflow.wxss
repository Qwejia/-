.container {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  min-height: 100vh;
  padding: 20rpx;
}

.page-header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.type-tabs {
  display: flex;
  border: 2rpx solid rgba(30, 58, 138, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
}

.tab-item {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  background: #dbeafe;
}

.tab-item.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: white;
}

.period-picker {
  background: #dbeafe;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(30, 58, 138, 0.2);
  flex: 1;
}

.picker-content {
  font-size: 28rpx;
  color: #333;
}

.export-btn {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.export-icon {
  font-size: 36rpx;
  color: white;
}

.report-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.section {
  margin-bottom: 40rpx;
}

.section-header {
  background: #dbeafe;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.subsection {
  margin-bottom: 30rpx;
}

.subsection-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
  padding-left: 30rpx;
  display: block;
}

.table {
  border: 2rpx solid rgba(30, 58, 138, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 30rpx;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid rgba(30, 58, 138, 0.2);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  padding: 20rpx;
  font-size: 26rpx;
}

.item-name {
  flex: 2;
  color: #333;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.item-number {
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
  width: 60rpx;
  flex-shrink: 0;
}

.item-amount {
  flex: 1;
  text-align: right;
  font-family: monospace;
  padding-right: 30rpx;
}

.inflow {
  color: #059669;
}

.outflow {
  color: #dc2626;
}

.net-cash-flow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #dbeafe;
  padding: 20rpx 30rpx;
  margin: 0 30rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(30, 58, 138, 0.2);
}

.net-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.net-amount {
  font-size: 28rpx;
  font-weight: bold;
  font-family: monospace;
}

.total-row {
  background: #dbeafe;
  border-top: 2rpx solid rgba(30, 58, 138, 0.3);
}

.total-label {
  flex: 2;
  color: #1e3a8a;
  font-weight: bold;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.total-amount {
  flex: 1;
  text-align: right;
  font-family: monospace;
  font-weight: bold;
  padding-right: 30rpx;
}

.final-row {
  background: #bfdbfe;
  border-top: 2rpx solid #1e3a8a;
}

.final-label {
  flex: 2;
  color: #1e40af;
  font-weight: bold;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}

.final-amount {
  flex: 1;
  text-align: right;
  font-family: monospace;
  font-size: 30rpx;
  font-weight: bold;
  color: #1e40af;
  padding-right: 30rpx;
}

@media (max-width: 750rpx) {
  .container {
    padding: 12rpx;
  }
  
  .page-header, .report-content {
    padding: 20rpx;
  }
  
  .header-actions {
    flex-direction: column;
    align-items: stretch;
  }
  
  .type-tabs, .period-picker {
    width: 100%;
  }
  
  .export-btn {
    align-self: center;
    margin-top: 20rpx;
  }
  
  .table {
    margin: 0 10rpx;
  }
  
  .table-cell {
    padding: 16rpx;
    font-size: 24rpx;
  }
  
  .item-name, .total-label, .final-label {
    padding-left: 10rpx;
  }
  
  .item-amount, .total-amount, .final-amount {
    padding-right: 20rpx;
  }
  
  .item-number {
    margin-right: 10rpx;
    width: 50rpx;
    font-size: 20rpx;
  }
  
  .net-cash-flow {
    margin: 0 10rpx;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .net-amount {
    margin-top: 10rpx;
  }
}