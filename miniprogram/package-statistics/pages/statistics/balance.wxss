.container {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  min-height: 100vh;
  padding: 20rpx;
}

.page-header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker {
  background: #dbeafe;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(30, 58, 138, 0.2);
  flex: 1;
}

.picker-content {
  font-size: 28rpx;
  color: #333;
}

.export-btn {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.export-icon {
  font-size: 36rpx;
  color: white;
}

.report-content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.1);
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.section {
  margin-bottom: 40rpx;
}

.section-header {
  background: #dbeafe;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(30, 58, 138, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.subsection {
  margin-bottom: 30rpx;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
  padding-left: 30rpx;
  display: block;
}

.subsubsection {
  margin-bottom: 24rpx;
}

.subsubsection-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 12rpx;
  padding-left: 60rpx;
  display: block;
}

.table {
  border: 2rpx solid rgba(30, 58, 138, 0.2);
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 30rpx;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid rgba(30, 58, 138, 0.2);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.item-name {
  flex: 2;
  padding-left: 30rpx;
}

.item-amount {
  flex: 1;
  text-align: right;
  font-family: monospace;
  padding-right: 30rpx;
}

.subtotal {
  background: #dbeafe;
}

.subtotal-label {
  font-weight: bold;
  color: #666;
}

.subtotal-amount {
  font-weight: bold;
  color: #333;
}

.total {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
}

.total-label {
  font-weight: bold;
  color: white;
}

.total-amount {
  font-weight: bold;
  color: white;
}

.section-total {
  margin-top: 20rpx;
}

@media (max-width: 750rpx) {
  .container {
    padding: 12rpx;
  }
  
  .page-header, .report-content {
    padding: 20rpx;
  }
  
  .table {
    margin: 0 10rpx;
  }
  
  .item-name {
    padding-left: 16rpx;
  }
  
  .item-amount {
    padding-right: 16rpx;
  }
  
  .table-cell {
    padding: 16rpx;
    font-size: 24rpx;
  }
  
  .subsection-title {
    padding-left: 16rpx;
  }
  
  .subsubsection-title {
    padding-left: 32rpx;
  }
}