.page-container {
  min-height: 100vh;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.ai-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
  padding: 0;
}

.ai-btn:active {
  transform: scale(0.95);
}

.ai-icon {
  font-size: 28rpx;
}

.content-scroll {
  flex: 1;
  height: calc(100vh - 140rpx);
}

.content-wrapper {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.search-section {
  margin-bottom: 8rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
}

.search-icon {
  font-size: 28rpx;
  color: #64748b;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #0f172a;
}

.actions-section {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  transition: all 0.25s;
}

.action-btn:active {
  transform: translateY(-4rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.action-btn.primary {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
}

.action-btn.secondary {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border: 1px solid #e2e8f0;
}

.action-btn.ai {
  background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 22rpx;
  font-weight: 600;
}

.action-btn.primary .btn-text,
.action-btn.ai .btn-text {
  color: #0f172a;
}

.action-btn.secondary .btn-text {
  color: #334155;
}

.filter-section {
  margin-bottom: 8rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
  transition: all 0.25s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
}

.invoices-section {
  margin-bottom: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 8rpx;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f1f5f9;
  border-radius: 16rpx;
}

.sort-text {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.sort-arrow {
  font-size: 18rpx;
  color: #64748b;
}

.invoices-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.invoice-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(248,250,252,0.95) 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2px 4px rgba(15, 23, 42, 0.06);
  border: 1px solid #e2e8f0;
  transition: all 0.25s;
}

.invoice-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.invoice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.invoice-number {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
}

.invoice-type {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.invoice-type.sale {
  background: linear-gradient(135deg, #dbeafe 0%, #93c5fd 100%);
  color: #1e40af;
}

.invoice-type.purchase {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  color: #059669;
}

.invoice-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.invoice-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.invoice-row.amount {
  padding-top: 12rpx;
  border-top: 1px solid #e2e8f0;
}

.row-label {
  font-size: 22rpx;
  color: #64748b;
}

.row-value {
  font-size: 24rpx;
  color: #334155;
  font-weight: 500;
}

.invoice-row.amount .row-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e3a8a;
}

.invoice-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.invoice-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.invoice-status.draft {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}

.invoice-status.issued {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  color: #059669;
}

.invoice-status.cancelled {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  color: #dc2626;
}

.invoice-arrow {
  font-size: 24rpx;
  color: #94a3b8;
}

.empty-state {
  padding: 64rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 8px rgba(15, 23, 42, 0.08);
}

.loading-state {
  padding: 64rpx;
  text-align: center;
}

.loading-text {
  font-size: 24rpx;
  color: #64748b;
}

.load-more {
  padding: 24rpx;
  text-align: center;
}

.load-text {
  font-size: 24rpx;
  color: #1e3a8a;
  font-weight: 600;
}

@media (max-width: 375rpx) {
  .content-wrapper {
    padding: 16rpx;
    gap: 16rpx;
  }
  
  .actions-section {
    flex-direction: column;
  }
}