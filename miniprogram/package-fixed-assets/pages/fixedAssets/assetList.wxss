/* 资产列表页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.list-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.list-subtitle {
  font-size: 20rpx;
  color: #666;
  display: block;
}

/* 搜索和筛选样式 */
.filter-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 70rpx;
  padding: 0 70rpx 0 20rpx;
  font-size: 20rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 35rpx;
  outline: none;
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #666;
}

.filter-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  display: block;
  font-size: 16rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 8rpx;
}

.filter-picker {
  width: 100%;
  height: 60rpx;
  padding: 0 15rpx;
  font-size: 18rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.filter-picker:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.picker-text {
  flex: 1;
  color: #666;
}

.sort-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.sort-label {
  font-size: 16rpx;
  font-weight: 500;
  color: #666;
}

.sort-picker {
  flex: 1;
  height: 60rpx;
  padding: 0 15rpx;
  font-size: 18rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.sort-picker:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 资产列表样式 */
.asset-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 120rpx;
}

.asset-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.asset-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.asset-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.asset-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.asset-status {
  font-size: 16rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-in-use {
  background-color: #d4edda;
  color: #155724;
}

.status-idle {
  background-color: #fff3cd;
  color: #856404;
}

.status-scrapped {
  background-color: #f8d7da;
  color: #721c24;
}

.status-sold {
  background-color: #d1ecf1;
  color: #0c5460;
}

.asset-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 18rpx;
  color: #666;
}

.info-value {
  font-size: 18rpx;
  font-weight: 500;
  color: #333;
}

.asset-footer {
  padding-top: 15rpx;
  border-top: 1rpx solid #e9ecef;
}

.asset-description {
  font-size: 16rpx;
  color: #999;
  line-height: 1.4;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-asset-btn {
  padding: 15rpx 40rpx;
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 18rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.add-asset-btn:hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.4);
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #e9ecef;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bar-btn {
  flex: 1;
  height: 70rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.add-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.add-btn:hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.depreciate-btn {
  background-color: #28a745;
  color: #fff;
}

.depreciate-btn:hover {
  opacity: 0.9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.4);
}

.btn-icon {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .filter-row {
    flex-direction: column;
  }
  
  .asset-card {
    padding: 20rpx;
  }
  
  .info-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 5rpx;
  }
  
  .bottom-bar {
    flex-direction: column;
  }
}