/* 资产详情页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header-left {
  flex: 1;
}

.header-center {
  flex: 2;
  text-align: center;
}

.header-right {
  flex: 1;
  text-align: right;
}

.back-button {
  background: none;
  border: none;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx;
}

.back-icon {
  font-size: 32rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.edit-button {
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 资产信息 */
.asset-info {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 2;
  text-align: right;
}

.net-value {
  color: #1890ff;
  font-weight: bold;
}

.status-inUse {
  color: #52c41a;
}

.status-idle {
  color: #faad14;
}

.status-scrapped {
  color: #f5222d;
}

.status-sold {
  color: #722ed1;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 30rpx;
}

.depreciation-button {
  width: 100%;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.depreciation-button:active {
  background-color: #40a9ff;
}